<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 第一层  上部和左部偏移一定距离-->

    <item>
        <shape android:shape="oval">
            <stroke
                android:width="3dp"
                android:color="#22000000" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="oval">
            <stroke
                android:width="3dp"
                android:color="#33000000" />
        </shape>
    </item>
    <item
        android:bottom="1.8dp"
        android:left="1.8dp"
        android:right="1.8dp"
        android:top="1.8dp">
        <shape android:shape="oval">
            <stroke
                android:width="3dp"
                android:color="#44000000" />
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="oval">
            <solid android:color="@color/white" />
            <stroke
                android:width="3dp"
                android:color="@color/cm_main_text" />
            <size
                android:width="45dp"
                android:height="45dp" />
        </shape>
    </item>

</layer-list>
