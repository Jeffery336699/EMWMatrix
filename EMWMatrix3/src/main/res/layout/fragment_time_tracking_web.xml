<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cm_bg"
                android:clipToPadding="true"
                android:fitsSystemWindows="true"
                android:orientation="vertical">

    <cc.emw.mobile.view.ProgressWebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cm_header_bar2"/>

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="16sp"
        android:visibility="gone"
        />

    <cc.emw.mobile.view.FloatingActionMenu
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:paddingBottom="60dp"
        android:paddingRight="12dp"
        android:visibility="gone"
        app:menu_animationDelayPerItem="50"
        app:menu_backgroundColor="@color/cm_dialog_bg"
        app:menu_buttonSpacing="6dp"
        app:menu_colorNormal="#E6FF7E00"
        app:menu_colorPressed="#E6FF8F11"
        app:menu_colorRipple="#99FFFFFF"
        app:menu_fab_label=""
        app:menu_fab_size="normal"
        app:menu_icon="@drawable/fab_add"
        app:menu_labels_colorNormal="#00000000"
        app:menu_labels_colorPressed="#00000000"
        app:menu_labels_colorRipple="#66FFFFFF"
        app:menu_labels_cornerRadius="3dp"
        app:menu_labels_ellipsize="none"
        app:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
        app:menu_labels_margin="0dp"
        app:menu_labels_maxLines="-1"
        app:menu_labels_padding="8dp"
        app:menu_labels_paddingBottom="4dp"
        app:menu_labels_paddingLeft="8dp"
        app:menu_labels_paddingRight="8dp"
        app:menu_labels_paddingTop="4dp"
        app:menu_labels_position="left"
        app:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
        app:menu_labels_showShadow="false"
        app:menu_labels_singleLine="false"
        app:menu_labels_textColor="#FFFFFF"
        app:menu_labels_textSize="14sp"
        app:menu_openDirection="up"

        app:menu_shadowColor="#66000000"
        app:menu_shadowRadius="4dp"
        app:menu_shadowXOffset="1dp"
        app:menu_shadowYOffset="3dp"
        app:menu_showShadow="false">
        <!--app:menu_labels_style="@style/YourCustomLabelsStyle"
        app:menu_fab_show_animation="@anim/my_show_animation"
        app:menu_fab_hide_animation="@anim/my_hide_animation"-->

        <cc.emw.mobile.view.FloatingActionButton
            android:id="@+id/menu_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ico_sort_act_big"
            app:fab_colorNormal="@color/transparent"
            app:fab_colorPressed="#FF7E00"
            app:fab_label="活动"
            app:fab_showShadow="false"
            app:fab_size="mini"/>

        <cc.emw.mobile.view.FloatingActionButton
            android:id="@+id/menu_item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ico_sort_mail_big"
            app:fab_colorNormal="@color/transparent"
            app:fab_colorPressed="#FF7E00"
            app:fab_label="邮件"
            app:fab_showShadow="false"
            app:fab_size="mini"/>

        <cc.emw.mobile.view.FloatingActionButton
            android:id="@+id/menu_item3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ico_sort_phone_big"
            app:fab_colorNormal="@color/transparent"
            app:fab_colorPressed="#FF7E00"
            app:fab_label="电话"
            app:fab_showShadow="false"
            app:fab_size="mini"/>

        <cc.emw.mobile.view.FloatingActionButton
            android:id="@+id/menu_item4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ico_sort_date_big"
            app:fab_colorNormal="@color/transparent"
            app:fab_colorPressed="#FF7E00"
            app:fab_label="约会"
            app:fab_showShadow="false"
            app:fab_size="mini"/>

        <cc.emw.mobile.view.FloatingActionButton
            android:id="@+id/menu_item5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ico_sort_calendar_big"
            app:fab_colorNormal="@color/transparent"
            app:fab_colorPressed="#FF7E00"
            app:fab_label="日程"
            app:fab_showShadow="false"
            app:fab_size="mini"/>

        <cc.emw.mobile.view.FloatingActionButton
            android:id="@+id/menu_item6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ico_sort_plan_big"
            app:fab_colorNormal="@color/transparent"
            app:fab_colorPressed="#FF7E00"
            app:fab_label="计划"
            app:fab_showShadow="false"
            app:fab_size="mini"/>

        <cc.emw.mobile.view.FloatingActionButton
            android:id="@+id/menu_item7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ico_sort_task_big"
            app:fab_colorNormal="@color/transparent"
            app:fab_colorPressed="#FF7E00"
            app:fab_label="任务"
            app:fab_showShadow="false"
            app:fab_size="mini"/>

        <cc.emw.mobile.view.FloatingActionButton
            android:id="@+id/menu_item8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ico_sort_feed_big"
            app:fab_colorNormal="@color/transparent"
            app:fab_colorPressed="#FF7E00"
            app:fab_label="动态"
            app:fab_showShadow="false"
            app:fab_size="mini"/>
    </cc.emw.mobile.view.FloatingActionMenu>
</RelativeLayout>