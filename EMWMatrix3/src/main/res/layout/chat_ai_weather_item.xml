<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@drawable/chat_ai_item_bg">
    <!--天气预报-->
    <RelativeLayout
        android:id="@+id/rl_weather_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="城市，省" android:textColor="#101010"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="更新时间:xx月xx日,xx时:xx秒"
            android:textColor="#989898"
            android:textSize="12sp"/>
    </RelativeLayout>
    <View
        android:id="@+id/weather_view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_weather_title"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#D6D7DC"/>
    <RelativeLayout
        android:id="@+id/rl_weather_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weather_view1"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/iv_weather_type"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/tv_weather_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_weather_type"
            android:text="今天"
            android:textColor="#101010"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/tv_weather_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_weather_day"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/iv_weather_type"
            android:text="晴"
            android:textColor="#989898"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/tv_weather_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="24℃ / 11℃"
            android:textColor="#101010"
            android:textSize="18sp"/>
    </RelativeLayout>
    <View
        android:id="@+id/weather_view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_weather_middle"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#D6D7DC"/>
    <LinearLayout
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weather_view2"
        android:layout_margin="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_weather_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北风"
                android:textColor="#989898"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tv_weathe_wind_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2级"
                android:textColor="#101010"
                android:textSize="20sp"/>
        </LinearLayout>
        <View
            android:id="@+id/weather_view3"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="#D8D8D8"/>
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_weather_wind2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="相对湿度"
                android:textColor="#989898"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tv_weathe_wind_num2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60%"
                android:textColor="#101010"
                android:textSize="20sp"/>
        </LinearLayout>
        <View
            android:id="@+id/weather_view4"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="#D8D8D8"/>
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_weather_wind3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="空气优"
                android:textColor="#989898"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tv_weathe_wind_num3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="35"
                android:textColor="#101010"
                android:textSize="20sp"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>