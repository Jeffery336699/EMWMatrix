<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tv_child_comment_reply"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/tv_child_comment_creator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设计部小黑"
        android:textColor="@color/dynamicreply_name_text"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="回复"
        android:textColor="#595968"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_child_comment_touser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设计部小叶"
        android:textColor="@color/dynamicreply_name_text"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_child_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="my descriptions"
        android:textColor="#595968"
        android:textSize="12sp" />

</LinearLayout>