<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <ImageView
        android:id="@+id/login_iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="60dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ico_login_logo"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_login_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="82dp"
        android:text="One World!"
        android:textColor="#E2604E"
        android:textSize="40sp"
        android:textStyle="bold" />

    <FrameLayout
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_login_logo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_inputeara_bg2"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="24dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="24dp">

            <cc.emw.mobile.view.CircleImageView
                android:id="@+id/iv_dynamic_head"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/cm_img_head" />


            <EditText
                android:id="@+id/et_login_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_edittext_bg"
                android:hint="@string/login_hint_password"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/cm_text"
                android:textColorHint="@color/login_texthint"
                android:textSize="15sp" />


            <Button
                android:id="@+id/btn_logins"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_button_bg"
                android:gravity="center"
                android:text="登录"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/rl_login_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <CheckBox
                    android:id="@+id/cb_login_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:button="@drawable/cm_multi_select3"
                    android:checked="true"
                    android:text="&#160;&#160;记住密码"
                    android:textColor="#8D8E97"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_login_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="使用其他账户登录？"
                    android:textColor="#8D8E97"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_login_logo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_inputeara_bg2"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="24dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="24dp">

            <cc.emw.mobile.view.CircleImageView
                android:id="@+id/iv_dynamic_heads"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/cm_img_head" />

            <EditText
                android:id="@+id/et_login_username"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_edittext_bg"
                android:hint="@string/login_hint_username"
                android:imeOptions="actionNext"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/cm_text"
                android:textColorHint="@color/login_texthint"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_login_comcode"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_edittext_bg"

                android:ems="10"
                android:hint="@string/login_hint_comcode"
                android:imeOptions="actionDone"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/cm_text"
                android:textColorHint="@color/login_texthint"
                android:textSize="15sp" />
            <!--android:drawableLeft="@drawable/login_ico_qiyedaima"
            android:drawablePadding="5dp"-->

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_button_bg"
                android:gravity="center"
                android:text="下一步"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

        </LinearLayout>

    </FrameLayout>


    <!--<View-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="0dp"-->
    <!--android:layout_weight="1" />-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:layout_gravity="center"
        android:text="@string/login_copy_right_en"
        android:textColor="#8D8E97"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:text="@string/login_copy_right_ch"
        android:textColor="#8D8E97"
        android:textSize="12sp" />

</RelativeLayout>