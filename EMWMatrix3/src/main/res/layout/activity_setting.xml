<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_setting_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/cm_setting_title_bar2" />

        <ScrollView
            android:id="@+id/sv_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_me_relation"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="个人相关"
                        android:textColor="#DE000000"
                        android:textSize="15sp" />

                    <cc.emw.mobile.view.IconTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:gravity="center"
                        android:textColor="#CBCBCB"
                        android:textSize="12sp"
                        app:iconCode="eb69" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_pay_setting"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:paddingLeft="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="我的钱包"
                        android:textColor="#DE000000"
                        android:textSize="15sp" />

                    <cc.emw.mobile.view.IconTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:gravity="center"
                        android:textColor="#CBCBCB"
                        android:textSize="12sp"
                        app:iconCode="eb69" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tv_me_preference"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="偏好设置"
                            android:textColor="#DE000000"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_timeout_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="无操作5分钟后跳出登录窗口"
                            android:textColor="#FFEA5404"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <cc.emw.mobile.view.IconTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:gravity="center"
                        android:textColor="#CBCBCB"
                        android:textSize="12sp"
                        app:iconCode="eb69" />

                </LinearLayout>

                <cc.emw.mobile.view.CollapseView
                    android:id="@+id/cv_self_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="54dp" />

                <LinearLayout
                    android:id="@+id/tv_me_self"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="54dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="隐私设置"
                        android:textColor="#DE000000"
                        android:textSize="14sp" />

                    <cc.emw.mobile.view.IconTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:gravity="center"
                        android:textColor="#CBCBCB"
                        android:textSize="12sp"
                        app:iconCode="eb69" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tv_me_notification"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="54dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="通知设置"
                        android:textColor="#DE000000"
                        android:textSize="15sp" />

                    <cc.emw.mobile.view.IconTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:gravity="center"
                        android:textColor="#CBCBCB"
                        android:textSize="12sp"
                        app:iconCode="eb69" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tv_me_navigation"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="54dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="导航设置"
                        android:textColor="#DE000000"
                        android:textSize="15sp" />

                    <cc.emw.mobile.view.IconTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:gravity="center"
                        android:textColor="#CBCBCB"
                        android:textSize="12sp"
                        app:iconCode="eb69" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/itemProgress_daiban"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="待办工作"
                        android:textColor="#DE000000"
                        android:textSize="15sp" />

                    <cc.emw.mobile.view.IconTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:gravity="center"
                        android:textColor="#CBCBCB"
                        android:textSize="12sp"
                        app:iconCode="eb69" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/itemProgress_twostep"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="两步验证"
                        android:textColor="#DE000000"
                        android:textSize="15sp" />

                    <cc.emw.mobile.view.IconTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:gravity="center"
                        android:textColor="#CBCBCB"
                        android:textSize="12sp"
                        app:iconCode="eb69" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/itemProgress_about"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="关于"
                        android:textColor="#DE000000"
                        android:textSize="15sp" />

                    <cc.emw.mobile.view.IconTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:gravity="center"
                        android:textColor="#CBCBCB"
                        android:textSize="12sp"
                        app:iconCode="eb69" />
                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="20dp"
                    android:elevation="10dp"
                    android:orientation="vertical"
                    app:cardCornerRadius="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FF4C0D"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_exit"
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:gravity="center"
                            android:text="退出"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <View
        android:id="@+id/view_dialog_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cm_dialog_bg"
        android:clickable="true"
        android:visibility="gone" />

</RelativeLayout>