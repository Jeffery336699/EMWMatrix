<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cm_bg"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="true">
    <include layout="@layout/cm_dialog_bar2"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lv_personselect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@color/cm_divider_bg"
            android:dividerHeight="0dip"
            android:fadingEdge="none"
            android:footerDividersEnabled="true"
            android:headerDividersEnabled="false"
            android:listSelector="@drawable/selector_transparent"
            android:padding="0dp"
            android:scrollbarStyle="outsideOverlay" />

        <TextView
            android:id="@+id/contact_tv_letter"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_gravity="center"
            android:background="@drawable/dialog_char"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <cc.emw.mobile.view.SideBar
            android:id="@+id/contact_sidebar"
            android:layout_width="25dip"
            android:layout_height="300dp"
            android:layout_gravity="right|center" />
    </FrameLayout>

</LinearLayout>