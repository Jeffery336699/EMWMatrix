<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp">

        <cc.emw.mobile.view.CircleImageView
            android:id="@+id/portrait_civ"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/cm_img_head"
            custom:border_color="@color/cm_headimg_border"
            custom:border_width="2dp" />

        <TextView
            android:id="@+id/response_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/portrait_civ"
            android:textColor="#354052"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="周周"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/response_name_tv"
            android:layout_below="@id/response_name_tv"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/project_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="项目:  4"
                android:textColor="#585d68"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/task_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="任务:  6"
                android:textColor="#585d68"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/arrow_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:paddingBottom="13dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="13dp">

            <ImageView
                android:id="@+id/arrow_icon"
                android:layout_width="17dp"
                android:layout_height="8.5dp"
                android:contentDescription="@string/collapse_btn"
                android:scaleType="centerCrop" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_summary_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d6d7dc" />
</LinearLayout>
