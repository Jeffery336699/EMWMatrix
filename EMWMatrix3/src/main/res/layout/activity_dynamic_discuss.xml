<?xml version="1.0" encoding="utf-8"?>
<cc.emw.mobile.chat.view.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom"
    sothree:umanoClipPanel="false"
    sothree:umanoDragView="@+id/dragView"
    sothree:umanoOverlay="false"
    sothree:umanoPanelHeight="50dp"
    sothree:umanoParallaxOffset="0dp"
    sothree:umanoScrollableView="@+id/load_more_small_image_list_view"
    sothree:umanoShadowHeight="4dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    </FrameLayout>
    <LinearLayout
        android:id="@+id/dragView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:orientation="vertical">
        <cc.emw.mobile.view.PagerSlidingTabStrip
            xmlns:slidtab="http://schemas.android.com/apk/res-auto"
            android:id="@+id/tabstrip_dynamic_discuss"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            slidtab:indicatorColor="#FF7E00"
            slidtab:indicatorHeight="3dp"
            slidtab:underlineColor="#DADDE0"
            slidtab:underlineHeight="0.5dp"/>
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_dynamic_discuss"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
