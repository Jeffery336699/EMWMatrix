<?xml version="1.0" encoding="utf-8"?>
<cc.emw.mobile.view.SegmentedGroup
    android:id="@+id/segmented_private_type"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:layout_weight="1"
    android:gravity="right"
    android:orientation="horizontal"
    segmentedgroup:sc_border_width="1dp"
    segmentedgroup:sc_checked_text_color="@color/segmentedgroup_checked_text"
    segmentedgroup:sc_corner_radius="5dp"
    segmentedgroup:sc_tint_color="@color/segmentedgroup_tint_text">
    <RadioButton
        android:id="@+id/access_public"
        style="@style/RadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:tag="1"
        android:text="公开"/>
    <RadioButton
        android:id="@+id/access_private"
        style="@style/RadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="2"
        android:text="私有"/>
</cc.emw.mobile.view.SegmentedGroup>