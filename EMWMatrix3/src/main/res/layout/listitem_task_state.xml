<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_transparent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/civ_task_child_head_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_task_child_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="任务标题"
            android:textColor="#354052"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_task_child_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05/01-05/03"
                android:textColor="#595968"
                android:textSize="14sp"/>

            <cc.emw.mobile.view.IconTextView
                android:id="@+id/itv_task_child_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#f95a79"
                android:textSize="12dp"
                app:iconCode="ea6c"/>
        </LinearLayout>
    </LinearLayout>

    <cc.emw.mobile.view.CircleImageView
        android:id="@+id/civ_task_child_head_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:src="@drawable/cm_img_head"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:background="@color/cm_divider_bg"/>

</RelativeLayout>