<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/iv_sharefile_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ico_word" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_sharefile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:singleLine="true"
            android:text="@string/unkonw"
            android:textColor="#595968"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sharefile_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_sharefile_project"
                android:text="@string/unkonw"
                android:textColor="#8D8E97"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_sharefile_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_sharefile_project"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/tv_sharefile_project"
                android:layout_toRightOf="@+id/tv_sharefile_time"
                android:text="@string/unkonw"
                android:textColor="#8D8E97"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_sharefile_project"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:background="#D7E0EB"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="项目"
                android:textColor="#5D7EA7"
                android:textSize="12sp"
                android:visibility="gone" />
        </RelativeLayout>

    </LinearLayout>
    <!--<ImageButton
        android:id="@+id/btn_sharefile_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:background="@null"
        android:src="@drawable/list_btn_del" />-->
    <cc.emw.mobile.view.IconTextView
        android:id="@+id/tv_sharefile_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:padding="6dp"
        android:textColor="#404040"
        android:textSize="14dp"
        app:iconCode="ea79" />

</LinearLayout>