<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="57dp"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="12dp"
        android:paddingRight="0dp" >

        <ImageView
            android:contentDescription="@string/unkonw"
            android:id="@+id/iv_task_filelist_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/list_ico_folder" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_task_filelist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:singleLine="true"
                android:text="@string/unkonw"
                android:textColor="@color/cm_text"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_task_filelist_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unkonw"
                    android:textColor="@color/cm_texthint"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_task_filelist_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_task_filelist_time"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="@string/unkonw"
                    android:textColor="@color/cm_texthint"
                    android:textSize="12sp" 
                    android:visibility="gone"/>
            </RelativeLayout>
        </LinearLayout>

        <ImageButton
            android:contentDescription="@string/unkonw"
            android:id="@+id/btn_task_filelist_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/list_btn_sel_menu" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_task_filelist_more"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal"
        android:background="@color/cm_bg"
        android:gravity="center"
        android:visibility="visible" >

        <Button
            android:id="@+id/btn_task_filelist_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@drawable/ico_shanchu"
            android:textColor="@color/filelist_more_text"
            android:textSize="12sp"
            android:text="@string/task_attachment_delete" />
		
        <Button
            android:id="@+id/btn_task_filelist_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@drawable/ico_fenxiang"
            android:textColor="@color/filelist_more_text"
            android:textSize="12sp"
            android:text="@string/task_attachment_share" />

        <Button
            android:id="@+id/btn_task_filelist_download"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@drawable/ico_xiazai"
            android:textColor="@color/filelist_more_text"
            android:textSize="12sp"
            android:text="@string/task_attachment_download" />

        <Button
            android:id="@+id/btn_task_filelist_open"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@drawable/ico_chakan"
            android:textColor="@color/filelist_more_text"
            android:textSize="12sp"
            android:text="@string/task_attachment_scan" />
    </LinearLayout>

</LinearLayout>