<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        android:paddingLeft="4dp"
        android:paddingRight="10dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:id="@+id/view_message_tag_work_task"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/oval_message_tag"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="你被分派了一个新的任务"
                android:textColor="#585d68"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/project_times"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text=""
                android:textColor="@color/textview_color2"
                android:textSize="10sp"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/task_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ico_gongzuofenpai"
                android:drawablePadding="10dp"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:text="工作任务分派"
                android:textColor="@color/dynamicreply_name_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/project_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text=""
                android:textColor="@color/textview_color2"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/project"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="4dp"
        android:paddingRight="10dp"
        android:visibility="visible">

        <View
            android:id="@+id/view_message_tag_xiangmu"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/oval_message_tag"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_calendar_notice"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/nav_notice"
            android:visibility="gone" />

        <cc.emw.mobile.view.CircleImageView
            android:id="@+id/cimg_project_create"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/cm_img_head"
            android:visibility="visible"
            app:border_color="@color/cm_headimg_border" />

        <cc.emw.mobile.view.IconTextView
            android:id="@+id/head"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:background="#335B9D"
            android:gravity="center"
            android:textColor="@color/white"
            app:iconCode="ea28" />


        <TextView
            android:id="@+id/project_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            tools:text="jfffas都是jkajkfkj"
            android:singleLine="true"
            android:textColor="@color/textview_color2"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text=""
            android:textColor="@color/textview_color2"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/projects"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:paddingLeft="4dp"
        android:paddingRight="10dp"
        android:visibility="visible">

        <View
            android:id="@+id/view_message_tag_quanzi"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/oval_message_tag"
            android:visibility="invisible" />

        <cc.emw.mobile.view.CircleImageView
            android:id="@+id/heads"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/cm_img_head"
            app:border_color="@color/cm_headimg_border" />

        <TextView
            android:id="@+id/project_names"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColor="@color/textview_color2"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text=""
            android:textColor="@color/textview_color2"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/jiaqun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="4dp"
        android:paddingRight="10dp"
        android:paddingTop="8dp"
        android:visibility="visible">

        <View
            android:id="@+id/view_message_tag_work_jiaqun"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/oval_message_tag"
            android:visibility="invisible" />

        <cc.emw.mobile.view.CircleImageView
            android:id="@+id/jiaqun_head"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/cm_img_head"
            app:border_color="@color/cm_headimg_border" />

        <TextView
            android:id="@+id/tv_works_group_what"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="申请加入："
            android:textSize="12sp" />

        <TextView
            android:id="@+id/jiaqun_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:textColor="@color/dynamicreply_name_text"
            android:textSize="12sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/jiaqun_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/stroke_blue"
            android:gravity="center"
            android:padding="5dp"
            android:text="同意"
            android:textColor="#8EB270"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/jiaqun_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="拒绝"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/jianqun_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/textview_color2"
            android:textSize="10sp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>