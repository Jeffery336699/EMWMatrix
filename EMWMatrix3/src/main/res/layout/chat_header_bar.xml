<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


<LinearLayout
    android:id="@+id/cm_header_bar"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/cm_border_bg"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="5dp">

    <ImageButton
        android:id="@+id/cm_header_btn_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:background="@null"
        android:padding="5dp"
        android:src="@drawable/cm_header_btn_back_pre"
        android:visibility="gone" />

    <TextView
        android:id="@+id/cm_header_tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/unkonw"
        android:textColor="@color/cm_text"
        android:textSize="18sp" />

    <RadioGroup
        android:id="@+id/cm_header_rg_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/cm_header_rb_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/nav_rb_new"
            android:checked="true" />

        <RadioButton
            android:id="@+id/cm_header_rb_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:button="@drawable/nav_rb_concern" />
    </RadioGroup>

    <ImageButton
        android:id="@+id/cm_header_btn_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:background="@null"
        android:padding="0dp"
        android:src="@drawable/nav_btn_phone" />

        <ImageButton
            android:id="@+id/cm_header_btn_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="0dp"
            android:src="@drawable/nav_btn_more"/>

    <TextView
        android:id="@+id/cm_header_tv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:text="@string/unkonw"
        android:textColor="#5FC26D"
        android:textSize="18sp"
        android:visibility="gone" />
</LinearLayout>
    <TextView
        android:id="@+id/counts"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="3dp"
        android:visibility="gone"
        android:background="@drawable/chat_messages"
        android:gravity="center"
        android:layout_gravity="top|right"
        android:textColor="@color/white"
        android:textSize="12sp" />
</RelativeLayout>
