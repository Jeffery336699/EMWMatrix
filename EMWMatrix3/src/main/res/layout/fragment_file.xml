<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent">

        <LinearLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ll_file_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cm_bg"
            android:orientation="vertical">

            <include
                layout="@layout/cm_header_bar3"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="14dp"
                android:background="@color/white"
                android:gravity="center"
                android:visibility="gone">

                <cc.emw.mobile.view.CircleImageView
                    android:id="@+id/cm_header_civ_head"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cm_img_head"
                    app:border_color="@color/cm_headimg_border"
                    app:border_width="0.5dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="知识库"
                    android:textColor="@color/cm_text"
                    android:textSize="17sp"
                    />

                <ImageButton
                    android:id="@+id/cm_header_btn_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/cm_ic_notice"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/cm_divider_bg"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingBottom="10dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="10dp">

                    <ImageView
                        android:id="@+id/iv1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/list_ico_folder"/>

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/iv1"
                        android:text="@string/file_myfile"
                        android:textColor="@color/cm_text"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tv11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/tv1"
                        android:layout_below="@id/tv1"
                        android:layout_toRightOf="@id/iv1"
                        android:text="2016-3-15 20:00     3项"
                        android:visibility="gone"/>

                    <cc.emw.mobile.view.IconTextView
                        android:id="@+id/tv111"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="#CBCBCB"
                        android:textSize="12dp"
                        app:iconCode="eb69"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="55dp"
                    android:background="@color/cm_divider_bg"/>

                <RelativeLayout
                    android:id="@+id/rl2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingBottom="10dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="10dp">

                    <ImageView
                        android:id="@+id/iv2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/list_ico_folder"/>

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/iv2"
                        android:text="@string/file_sharefile"
                        android:textColor="@color/cm_text"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tv22"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/tv2"
                        android:layout_below="@id/tv2"
                        android:layout_toRightOf="@id/iv2"
                        android:text="2016-3-15 20:00     3项"
                        android:visibility="gone"/>

                    <cc.emw.mobile.view.IconTextView
                        android:id="@+id/tv222"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="#CBCBCB"
                        android:textSize="12dp"
                        app:iconCode="eb69"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="55dp"
                    android:background="@color/cm_divider_bg"/>

                <RelativeLayout
                    android:id="@+id/rl3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingBottom="10dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="10dp">

                    <ImageView
                        android:id="@+id/iv3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/list_ico_folder"/>

                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/iv3"
                        android:text="@string/file_mysharefile"
                        android:textColor="@color/cm_text"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tv33"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/tv3"
                        android:layout_below="@id/tv3"
                        android:layout_toRightOf="@id/iv3"
                        android:text="2016-3-15 20:00     3项"
                        android:visibility="gone"/>

                    <cc.emw.mobile.view.IconTextView
                        android:id="@+id/tv333"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="#CBCBCB"
                        android:textSize="12dp"
                        app:iconCode="eb69"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="55dp"
                    android:background="@color/cm_divider_bg"/>

                <RelativeLayout
                    android:id="@+id/rl4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingBottom="10dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="10dp">

                    <ImageView
                        android:id="@+id/iv4"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/list_ico_folder"/>

                    <TextView
                        android:id="@+id/tv4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/iv4"
                        android:text="@string/file_cancelfile"
                        android:textColor="@color/cm_text"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tv44"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/tv4"
                        android:layout_below="@id/tv4"
                        android:layout_toRightOf="@id/iv4"
                        android:text="2016-3-15 20:00     3项"
                        android:visibility="gone"/>

                    <cc.emw.mobile.view.IconTextView
                        android:id="@+id/tv444"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="#CBCBCB"
                        android:textSize="12dp"
                        app:iconCode="eb69"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="55dp"
                    android:background="@color/cm_divider_bg"/>
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/ic_tv_add_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="120dp"
        android:layout_marginRight="12dp"
        android:background="@null"
        android:src="@drawable/chat_add"
        app:fab_shadow="false"
        />
</RelativeLayout>