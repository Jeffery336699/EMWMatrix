<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
        <cc.emw.mobile.view.IconTextView
            android:id="@+id/itv_authcode_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:gravity="center"
            android:textColor="#E95506"
            android:textSize="16dp"
            app:iconCode="eb68" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="One World!"
            android:textColor="#E95506"
            android:textSize="24sp" />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="8dp"
        android:text="请输入你收到的短信验证码"
        android:textColor="#2D2E32"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/et_authcode_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="8dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:background="@null"
        android:singleLine="true"
        android:inputType="number"
        android:imeOptions="actionNext"
        android:hint="请输入验证码"
        android:textColorHint="#AFB6BC"
        android:textColor="#E95506"
        android:textSize="14sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="8dp"
        android:background="#D7DFE3"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#D7DFE3"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="10dp"
        android:paddingRight="12dp">
        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="忘记密码？"
            android:textColor="#E95506"
            android:textSize="14sp"
            android:visibility="gone"/>-->
        <Button
            android:id="@+id/btn_authcode_next"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/login_btn_bg"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="下一步"
            android:textColor="@color/login_text_color"
            android:textSize="14sp"
            android:enabled="false"/>
    </RelativeLayout>
</LinearLayout>