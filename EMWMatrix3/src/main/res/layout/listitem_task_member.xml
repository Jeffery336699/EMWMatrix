<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <cc.emw.mobile.view.CircleImageView
        android:id="@+id/civ_listitem_task_member_head_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/cm_img_head"
        app:border_color="@color/cm_headimg_border"
        app:border_width="2dp" />

    <TextView
        android:id="@+id/tv_listitem_task_member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/civ_listitem_task_member_head_image"
        android:textColor="#354052"
        android:textSize="16sp" />

    <cc.emw.mobile.view.IconTextView
        android:id="@+id/tv_listitem_task_member_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="13dp"
        android:textColor="#ff4a40"
        android:textSize="20dp"
        app:iconCode="ec93" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignLeft="@+id/tv_listitem_task_member_name"
        android:layout_alignParentBottom="true"
        android:background="#D6D7DC" />
</RelativeLayout>