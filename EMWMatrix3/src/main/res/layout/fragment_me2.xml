<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <cc.emw.mobile.view.SwipeBackScrollView
        android:id="@+id/swipeback_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cm_bg"
        android:scrollbars="none"
        app:enable_gesture="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/ll_me_info"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@color/main_menu_item_pressed">

                <ImageView
                    android:id="@+id/iv_me_head_bg_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/desert" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical">

                    <cc.emw.mobile.view.CircleImageView
                        android:id="@+id/iv_me_head"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerInParent="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cm_img_head"
                        app:border_color="@color/white"
                        app:border_width="2dp" />

                    <cc.emw.mobile.view.IconTextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="100dp"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/white"
                        app:iconCode="eb69" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_me_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="21sp" />

                    <TextView
                        android:id="@+id/tv_me_depart_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5.5dp"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal">

                <com.gc.materialdesign.views.LayoutRipple2
                    android:id="@+id/ll_me_release"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_me_releasemun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0"
                        android:textColor="#FF101010"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="发布"
                        android:textColor="#FF92A4B4"
                        android:textSize="14sp" />
                </com.gc.materialdesign.views.LayoutRipple2>

                <com.gc.materialdesign.views.LayoutRipple2
                    android:id="@+id/ll_me_favorite"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_me_favoritenum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0"
                        android:textColor="#FF101010"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="收藏"
                        android:textColor="#FF92A4B4"
                        android:textSize="14sp" />
                </com.gc.materialdesign.views.LayoutRipple2>

                <com.gc.materialdesign.views.LayoutRipple2
                    android:id="@+id/ll_me_fans"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_me_fans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0"
                        android:textColor="#FF101010"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="粉丝"
                        android:textColor="#FF92A4B4"
                        android:textSize="14sp" />
                </com.gc.materialdesign.views.LayoutRipple2>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/cm_divider_bg" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="@color/cm_divider_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/itemProgress_daiban"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <cc.emw.mobile.view.IconTextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="12dp"
                        android:textColor="#EC651D"
                        android:textSize="16dp"
                        app:iconCode="e932" />

                    <TextView
                        android:id="@+id/tv_me_wait_handle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableRight="@mipmap/list_btn_next"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="12dp"
                        android:text="待办工作"
                        android:textColor="@color/mainme_text"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/cm_divider_bg" />

            <LinearLayout
                android:id="@+id/itemProgress_zhishiku"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_border"
                android:orientation="horizontal"
                android:visibility="gone">

                <cc.emw.mobile.view.IconTextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:textColor="#8d8e97"
                    android:textSize="16sp"
                    app:iconCode="eba6" />

                <TextView
                    android:id="@+id/tv_me_zhishiku"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableRight="@mipmap/list_btn_next"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="12dp"
                    android:text="知识库"
                    android:textColor="@color/mainme_text"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_border"
                android:orientation="horizontal"
                android:textColor="#8d8e97"
                android:textSize="16sp"
                android:visibility="gone">

                <cc.emw.mobile.view.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:textColor="#8d8e97"
                    android:textSize="16sp"
                    app:iconCode="e9a5" />

                <TextView
                    android:id="@+id/tv_me_sale_list"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/list_btn_next"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="订单"
                    android:textColor="@color/mainme_text"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/itemProgress_settings"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_border"
                android:orientation="horizontal"
                android:visibility="gone">

                <cc.emw.mobile.view.IconTextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:textColor="#8d8e97"
                    android:textSize="16sp"
                    app:iconCode="e991" />

                <TextView
                    android:id="@+id/tv_me_setting"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/list_btn_next"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="12dp"
                    android:text="设置"
                    android:textColor="@color/mainme_text"
                    android:textSize="16sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="@color/cm_divider_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/itemProgress_twostep"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <cc.emw.mobile.view.IconTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:textColor="#37B248"
                        android:textSize="16dp"
                        app:iconCode="e9c4" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:drawablePadding="10dp"
                        android:drawableRight="@mipmap/list_btn_next"
                        android:gravity="center_vertical"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:text="两步验证"
                        android:textColor="@color/mainme_text"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/cm_divider_bg" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="@color/cm_divider_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/itemProgress_about"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <cc.emw.mobile.view.IconTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:textColor="#0084FF"
                        android:textSize="16dp"
                        app:iconCode="e958" />

                    <TextView
                        android:id="@+id/tv_me_about"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:drawablePadding="10dp"
                        android:drawableRight="@mipmap/list_btn_next"
                        android:gravity="center_vertical"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:text="关于"
                        android:textColor="@color/mainme_text"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="10dp"
                android:background="@color/cm_divider_bg" />
        </LinearLayout>
    </cc.emw.mobile.view.SwipeBackScrollView>

</LinearLayout>