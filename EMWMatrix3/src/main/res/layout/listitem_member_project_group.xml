<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="8dp">
    <cc.emw.mobile.view.CircleImageView
        android:id="@+id/member_project_portrait"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/cm_img_head"/>

    <TextView
        android:id="@+id/member_project_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/member_project_indicate"
        android:layout_toRightOf="@id/member_project_portrait"
        android:gravity="center|left"
        android:text="未知"
        android:textColor="@color/task_modify_charge"
        android:textSize="14sp"/>
    <cc.emw.mobile.view.IconTextView
        android:id="@+id/member_project_indicate"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:gravity="center"
        android:textSize="12sp"
        custom:iconCode="eb67"/>
    <LinearLayout
        android:id="@+id/member_project_state_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/member_project_name"
        android:layout_below="@id/member_project_name"
        android:layout_marginTop="9dp"
        android:layout_toLeftOf="@+id/member_project_indicate"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/member_project_unstart"
            style="@style/mpg_state_text"
            android:text="未开始：0"/>
        <TextView
            android:id="@+id/member_project_processing"
            style="@style/mpg_state_text"
            android:text="进行中：0"/>
        <TextView
            android:id="@+id/member_project_finished"
            style="@style/mpg_state_text"
            android:text="已完成：9"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/member_project_state_ll"
        android:background="@color/gray"/>
</RelativeLayout>