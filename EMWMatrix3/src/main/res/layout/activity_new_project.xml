<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/cm_header_bar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <cc.emw.mobile.view.IconTextView
            android:id="@+id/cm_header_btn_left9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_back_bg"
            android:gravity="center"
            android:textColor="#7f8fa4"
            android:textSize="14dp"
            custom:iconCode="ea64" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <cc.emw.mobile.view.IconTextView
            android:id="@+id/cm_header_tv_right8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/dialog_back_bg"
            android:gravity="center"
            android:textColor="#7f8fa4"
            android:textSize="14dp"
            custom:iconCode="e92e" />

        <cc.emw.mobile.view.IconTextView
            android:id="@+id/cm_header_tv_right9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/dialog_ok_bg"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14dp"
            custom:iconCode="e931" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dialog_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dialog_margin_headtop"
        android:layout_marginBottom="@dimen/dialog_margin"
        android:layout_marginLeft="@dimen/dialog_margin"
        android:layout_marginRight="@dimen/dialog_margin"
        android:background="@drawable/activity_dialog_bg"
        android:orientation="vertical">
        <!--<View-->
        <!--android:layout_width="1dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_marginLeft="@dimen/activity_margin_left"-->
        <!--android:background="@color/activity_divider_bg"/>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <include layout="@layout/cm_header_bar"
                android:visibility="gone"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cm_border_bg"
                android:layout_marginTop="@dimen/dialog_scrollview_marginTop"
                android:orientation="vertical"
                android:paddingBottom="28dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">
                <EditText
                    android:id="@+id/project_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/trans"
                    android:hint="请填写团队名称"
                    android:singleLine="true"
                    android:textColor="#595968"
                    android:textColorHint="#585D68"
                    android:textSize="18sp"/>
                <EditText
                    android:id="@+id/project_mark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/trans"
                    android:hint="请填写团队描述"
                    android:textColor="#595968"
                    android:textColorHint="#585D68"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/cm_border_bg"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/choose_team_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <cc.emw.mobile.view.IconTextView
                        android:id="@+id/team_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:gravity="center"
                        android:textColor="#8d8e97"
                        android:textSize="16dp"
                        custom:iconCode="ecd0"/>
                    <TextView
                        android:id="@+id/team_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/team_icon"
                        android:background="@color/trans"
                        android:hint="所属圈子"
                        android:textColor="#354052"
                        android:textColorHint="#7F8FA4"
                        android:textSize="16sp"/>
                    <!--<ImageView-->
                    <!--android:id="@+id/arrow_icon"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_marginRight="16dp"-->
                    <!--android:background="@drawable/list_btn_next"/>-->
                    <cc.emw.mobile.view.IconTextView
                        android:id="@+id/arrow_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:background="@color/white"
                        android:gravity="center"
                        android:textColor="#cbcbcb"
                        android:textSize="14dp"
                        custom:iconCode="eb69"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignLeft="@+id/team_name_tv"
                        android:layout_below="@+id/team_name_tv"
                        android:background="#D6D7DC"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                    <cc.emw.mobile.view.IconTextView
                        android:id="@+id/private_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="28dp"
                        android:gravity="center"
                        android:textColor="#8d8e97"
                        android:textSize="16dp"
                        custom:iconCode="ea5c"/>
                    <TextView
                        android:id="@+id/private_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/private_icon"
                        android:background="@color/trans"
                        android:text="权限"
                        android:textColor="#354052"
                        android:textColorHint="#7F8FA4"
                        android:textSize="16sp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp">
                        <include layout="@layout/segmented_private"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignLeft="@+id/private_tv"
                        android:layout_below="@+id/private_icon"
                        android:background="#D6D7DC"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/starttime_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <cc.emw.mobile.view.IconTextView
                        android:id="@+id/starttime_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:gravity="center"
                        android:textColor="#8d8e97"
                        android:textSize="16dp"
                        custom:iconCode="e92c"/>
                    <TextView
                        android:id="@+id/starttime_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/starttime_icon"
                        android:background="@color/trans"
                        android:hint="开始日期"
                        android:textColor="#354052"
                        android:textColorHint="#7F8FA4"
                        android:textSize="16sp"/>
                    <!--<ImageView-->
                    <!--android:id="@+id/arrow_icon"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_marginRight="16dp"-->
                    <!--android:background="@drawable/list_btn_next"/>-->
                    <cc.emw.mobile.view.IconTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:background="@color/white"
                        android:gravity="center"
                        android:textColor="#cbcbcb"
                        android:textSize="14dp"
                        custom:iconCode="eb69"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignLeft="@+id/starttime_tv"
                        android:layout_below="@+id/starttime_tv"
                        android:background="#D6D7DC"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/endtime_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <cc.emw.mobile.view.IconTextView
                        android:id="@+id/endtime_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:gravity="center"
                        android:textColor="#8d8e97"
                        android:textSize="16dp"
                        custom:iconCode="e92c"/>
                    <TextView
                        android:id="@+id/endtime_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/endtime_icon"
                        android:background="@color/trans"
                        android:hint="结束日期"
                        android:textColor="#354052"
                        android:textColorHint="#7F8FA4"
                        android:textSize="16sp"/>
                    <!--<ImageView-->
                    <!--android:id="@+id/arrow_icon"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_marginRight="16dp"-->
                    <!--android:background="@drawable/list_btn_next"/>-->
                    <cc.emw.mobile.view.IconTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:background="@color/white"
                        android:gravity="center"
                        android:textColor="#cbcbcb"
                        android:textSize="14dp"
                        custom:iconCode="eb69"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignLeft="@+id/endtime_tv"
                        android:layout_below="@+id/endtime_tv"
                        android:background="#D6D7DC"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/choose_color_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <cc.emw.mobile.view.IconTextView
                        android:id="@+id/color_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:gravity="center"
                        android:textColor="#8d8e97"
                        android:textSize="16dp"
                        custom:iconCode="eba7"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/color_icon"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/project_color_iv"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginRight="6dp"
                            android:src="@drawable/project_color1"
                            android:visibility="visible"/>
                        <TextView
                            android:id="@+id/project_color_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/trans"
                            android:hint="颜色"
                            android:textColor="#354052"
                            android:textColorHint="#7F8FA4"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <cc.emw.mobile.view.IconTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:background="@color/white"
                        android:gravity="center"
                        android:textColor="#cbcbcb"
                        android:textSize="14dp"
                        custom:iconCode="eb69"/>
                </RelativeLayout>

            </LinearLayout>
            <RelativeLayout
                android:id="@+id/choose_member_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/cm_border_bg"
                android:visibility="gone">
                <cc.emw.mobile.view.IconTextView
                    android:id="@+id/member_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="28dp"
                    android:gravity="center"
                    android:textColor="#8d8e97"
                    android:textSize="16dp"
                    custom:iconCode="ecd0"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/member_icon"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/member_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/trans"
                        android:hint="请选择团队成员"
                        android:textColor="#354052"
                        android:textColorHint="#7F8FA4"
                        android:textSize="16sp"/>
                    <cc.emw.mobile.view.CircleImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="6dp"
                        android:src="@drawable/cm_img_head"
                        custom:border_color="@color/cm_headimg_border"
                        custom:border_width="2dp"/>
                </LinearLayout>
                <cc.emw.mobile.view.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:textColor="#cbcbcb"
                    android:textSize="14dp"
                    custom:iconCode="eb69"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>