<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="48dp"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <cc.emw.mobile.view.IconTextView
        android:id="@+id/tv_navigation_childicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="36dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/cm_text"
        android:textSize="14dp" />
    <TextView
        android:id="@+id/tv_navigation_childname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/cm_text"
        android:textSize="14sp" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="5dp">
        <TextView
            android:id="@+id/tv_navigation_childalias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="60dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/cm_texthint"
            android:textSize="14sp" />
    </LinearLayout>
    <cc.emw.mobile.view.SwitchButton
        android:id="@+id/sb_navigation_child"
        style="@style/SwitchButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:enabled="true"
        app:kswAnimationDuration="300"
        app:kswBackDrawable="@drawable/ios_back_drawable"
        app:kswBackMeasureRatio="1.4"
        app:kswThumbDrawable="@mipmap/ios_thumb"
        app:kswThumbMarginBottom="-8dp"
        app:kswThumbMarginLeft="-5dp"
        app:kswThumbMarginRight="-5dp"
        app:kswThumbMarginTop="-2.5dp" />
</LinearLayout>