<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="49dp"
    android:orientation="horizontal"
    android:background="@null"
	android:gravity="center"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

		<cc.emw.mobile.view.CircleImageView
			android:id="@+id/iv_dynamicfavour_head"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:src="@drawable/cm_img_head"
			app:border_color="@color/cm_headimg_border"
			app:border_width="0dp" />
		<TextView
			android:id="@+id/tv_dynamicfavour_name"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:layout_marginLeft="10dp"
			android:text="..."
			android:textColor="#595968"
			android:textSize="14sp" />
		<TextView
			android:id="@+id/tv_dynamicfavour_concerned"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="已关注"
			android:textColor="#595968"
			android:textSize="12sp" />
		<TextView
			android:id="@+id/tv_dynamicfavour_concern"
			android:layout_width="72dp"
			android:layout_height="30dp"
			android:background="@drawable/person_concern_bg"
			android:gravity="center"
			android:text="关注"
			android:textColor="#37b248"
			android:textSize="14sp"/>

</LinearLayout>