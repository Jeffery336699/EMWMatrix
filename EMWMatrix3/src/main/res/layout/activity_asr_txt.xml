<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:id="@+id/asr_main"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cm_bg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/head_bg">

            <ImageView
                android:id="@+id/cm_header_btn_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="?android:attr/selectableItemBackground"
                android:padding="10dp"
                android:src="@drawable/setting_back"/>

            <TextView
                android:id="@+id/cm_header_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="语音创建文件"
                android:textColor="#DE000000"
                android:textSize="19sp"/>

            <TextView
                android:id="@+id/cm_header_tv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:text="上传"
                android:textColor="@color/cm_text"
                android:textSize="16sp"
                android:visibility="visible"/>

            <ImageButton
                android:id="@+id/cm_header_btn_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/cm_ic_notice"
                android:visibility="gone"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#D9D9D9">
        </View>

        <EditText
            android:id="@+id/et_help_hand"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="top"
            android:hint="手动输入文件名，不输入则默认按时间命名"
            android:padding="5dp"
            android:text=""
            android:textSize="14sp">
        </EditText>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#D9D9D9">
        </View>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#D9D9D9">
        </View>

        <EditText
            android:id="@+id/et_help_feedback"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="top"
            android:hint="请通过语音输入或输入法输入，点击上传将自动以TXT文本格式上传文字至知识库-我的文件目录下。"
            android:lines="8"
            android:padding="5dp"
            android:text=""
            android:textSize="14sp">
        </EditText>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#D9D9D9">
        </View>

        <Button
            android:id="@+id/btn_send_help_feedback"
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:layout_below="@+id/rl_gains"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/common_btn_selector"
            android:enabled="true"
            android:text="语音输入"
            android:textColor="#ffffff"
            android:textSize="14sp"/>
    </LinearLayout>
</FrameLayout>