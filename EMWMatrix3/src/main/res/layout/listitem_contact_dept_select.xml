<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="48dp"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:gravity="center"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <cc.emw.mobile.view.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/iv_deptselect_head"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:src="@drawable/cm_img_head"
        android:visibility="gone"
        app:border_color="@color/cm_headimg_border"
        app:border_width="2dp"
        />

    <TextView
        android:id="@+id/tv_deptselect_name"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="0dip"
        android:layout_marginRight="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/unkonw"
        android:textColor="@color/cm_text"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/rb_groups_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/cm_radio_select"
        android:clickable="false"
        android:focusable="false" />

</LinearLayout>