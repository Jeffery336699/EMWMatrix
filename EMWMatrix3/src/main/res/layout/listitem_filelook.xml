<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">
    <cc.emw.mobile.view.CircleImageView
        android:id="@+id/iv_filelook_head"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/cm_img_head"
        app:border_color="@color/cm_headimg_border"
        app:border_width="0dp" />
    <TextView
        android:id="@+id/tv_filelook_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_filelook_head"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:ellipsize="middle"
        android:singleLine="true"
        android:text="@string/unkonw"
        android:textColor="@color/cm_text"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/tv_filelook_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/itv_filelook_arrow"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="right"
        android:singleLine="true"
        android:textColor="@color/cm_text"
        android:textSize="14sp"
        android:textColorHint="@color/cm_texthint"
        android:hint="请选择" />
    <cc.emw.mobile.view.IconTextView
        android:id="@+id/itv_filelook_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:gravity="center"
        android:textColor="#CBCBCB"
        android:textSize="12dp"
        app:iconCode="eb69" />
    <View
        android:id="@+id/view_filelook_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="36dp"
        android:layout_below="@+id/iv_filelook_head"
        android:background="@color/cm_divider_bg"/>
</RelativeLayout>