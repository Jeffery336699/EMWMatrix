<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cm_ll_worker"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:layout_marginTop="@dimen/all_content_top"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingLeft="18dp"
    android:paddingRight="18dp" >

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableLeft="@drawable/talker_ico_work"
        android:drawablePadding="10dp"
        android:gravity="left|center_vertical"
        android:hint="同步到工作台"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:textColorHint="@color/cm_text"
        android:textSize="15sp" />

    <cc.emw.mobile.view.SwitchButton
        android:id="@+id/cm_sb_worker"
        style="@style/SwitchButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:kswAnimationDuration="300"
        app:kswBackDrawable="@drawable/ios_back_drawable"
        app:kswBackMeasureRatio="1.4"
        app:kswThumbDrawable="@mipmap/ios_thumb"
        app:kswThumbMarginBottom="-8dp"
        app:kswThumbMarginLeft="-5dp"
        app:kswThumbMarginRight="-5dp"
        app:kswThumbMarginTop="-2.5dp" />
 <!-- android:enabled="false" -->

</LinearLayout>