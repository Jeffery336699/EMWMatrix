<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="100dp">

    <ImageView
        android:id="@+id/iv_group_new_image_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="100dp"
        android:scaleType="centerCrop"
        android:src="@color/gray_1"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/rl_chat_team_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:minHeight="100dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/vpv_chat_team_player"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/iv_chat_team_player_but"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ico_video_play" />
    </RelativeLayout>
</RelativeLayout>