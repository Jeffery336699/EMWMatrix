<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <!--android:background="@drawable/form_top_meun_white_bg"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <cc.emw.mobile.view.CircleImageView
            android:id="@+id/cm_header_btn_left"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="12dp"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/cm_img_head" />

        <TextView
            android:id="@+id/cm_header_tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="个人中心"
            android:textColor="#FF101010"
            android:textSize="17dp" />

        <ImageButton
            android:id="@+id/cm_header_btn_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:paddingRight="4dp"
            android:background="@null"
            android:src="@drawable/cm_ic_notice" />
    </LinearLayout>

    <!--cc.emw.mobile.view.SwipeBackScrollView-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cm_bg"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/ll_me_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cm_bg">

                <ImageView
                    android:id="@+id/iv_me_head_bg_img"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/desert" />


                <com.gc.materialdesign.views.Card
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="140dp"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:background="@color/white"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_me_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="48dp"
                            android:text=""
                            android:textColor="#FF101010"
                            android:textSize="24dp" />

                        <TextView
                            android:id="@+id/tv_me_depart_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text=""
                            android:textColor="#FF92A4B4"
                            android:textSize="14dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="9dp"
                            android:layout_marginRight="9dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/cm_divider_bg" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.gc.materialdesign.views.LayoutRipple2
                                android:id="@+id/ll_me_release"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_me_releasemun"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="0"
                                    android:textColor="#FF101010"
                                    android:textSize="18dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="7dp"
                                    android:text="发布"
                                    android:textColor="#FF92A4B4"
                                    android:textSize="12dp" />
                            </com.gc.materialdesign.views.LayoutRipple2>

                            <com.gc.materialdesign.views.LayoutRipple2
                                android:id="@+id/ll_me_favorite"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_me_favoritenum"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="0"
                                    android:textColor="#FF101010"
                                    android:textSize="18dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="7dp"
                                    android:text="收藏"
                                    android:textColor="#FF92A4B4"
                                    android:textSize="12dp" />
                            </com.gc.materialdesign.views.LayoutRipple2>

                            <com.gc.materialdesign.views.LayoutRipple2
                                android:id="@+id/ll_me_fans"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_me_fans"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="0"
                                    android:textColor="#FF101010"
                                    android:textSize="18dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="7dp"
                                    android:text="粉丝"
                                    android:textColor="#FF92A4B4"
                                    android:textSize="12dp" />
                            </com.gc.materialdesign.views.LayoutRipple2>

                        </LinearLayout>

                    </LinearLayout>

                </com.gc.materialdesign.views.Card>

                <cc.emw.mobile.view.CircleImageView
                    android:id="@+id/iv_me_head"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cm_img_head"
                    app:border_color="@color/white"
                    app:border_width="2dp" />

            </FrameLayout>


            <com.gc.materialdesign.views.Card
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.gc.materialdesign.views.LayoutRipple2
                        android:id="@+id/itemProgress_daiban"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="4dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <cc.emw.mobile.view.IconTextView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="12dp"
                            android:textColor="#EC651D"
                            android:textSize="16dp"
                            app:iconCode="e932" />

                        <TextView
                            android:id="@+id/tv_me_wait_handle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableRight="@mipmap/list_btn_next"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:paddingRight="12dp"
                            android:text="待办工作"
                            android:textColor="#101010"
                            android:textSize="14sp" />
                    </com.gc.materialdesign.views.LayoutRipple2>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/selector_border"
                        android:orientation="horizontal"
                        android:textColor="#8d8e97"
                        android:textSize="16sp"
                        android:visibility="gone">

                        <cc.emw.mobile.view.IconTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:textColor="#8d8e97"
                            android:textSize="16sp"
                            app:iconCode="e9a5" />

                        <TextView
                            android:id="@+id/tv_me_sale_list"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:drawablePadding="10dp"
                            android:drawableRight="@drawable/list_btn_next"
                            android:gravity="center_vertical"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:text="订单"
                            android:textColor="@color/mainme_text"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/itemProgress_settings"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/selector_border"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <cc.emw.mobile.view.IconTextView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:textColor="#8d8e97"
                            android:textSize="16sp"
                            app:iconCode="e991" />

                        <TextView
                            android:id="@+id/tv_me_setting"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:drawablePadding="10dp"
                            android:drawableRight="@mipmap/list_btn_next"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:paddingRight="12dp"
                            android:text="设置"
                            android:textColor="@color/mainme_text"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="9dp"
                        android:layout_marginRight="9dp"
                        android:background="@color/cm_divider_bg" />

                    <com.gc.materialdesign.views.LayoutRipple2
                        android:id="@+id/itemProgress_twostep"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <cc.emw.mobile.view.IconTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:textColor="#37B248"
                            android:textSize="16dp"
                            app:iconCode="e9c4" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:drawablePadding="10dp"
                            android:drawableRight="@mipmap/list_btn_next"
                            android:gravity="center_vertical"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:text="两步验证"
                            android:textColor="#101010"
                            android:textSize="14sp" />

                    </com.gc.materialdesign.views.LayoutRipple2>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="9dp"
                        android:layout_marginRight="9dp"
                        android:background="@color/cm_divider_bg" />

                    <com.gc.materialdesign.views.LayoutRipple2
                        android:id="@+id/itemProgress_about"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="4dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <cc.emw.mobile.view.IconTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:textColor="#0084FF"
                            android:textSize="16dp"
                            app:iconCode="e958" />

                        <TextView
                            android:id="@+id/tv_me_about"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:drawablePadding="10dp"
                            android:drawableRight="@mipmap/list_btn_next"
                            android:gravity="center_vertical"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:text="关于"
                            android:textColor="#101010"
                            android:textSize="14sp" />

                    </com.gc.materialdesign.views.LayoutRipple2>

                </LinearLayout>

            </com.gc.materialdesign.views.Card>
        </LinearLayout>
    </ScrollView>

</LinearLayout>