<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_group_create_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <cc.emw.mobile.view.IconTextView
            android:id="@+id/ic_tv_group_create_title_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:textColor="#595968"
            android:textSize="16sp"
            app:iconCode="ea64" />

        <TextView
            android:id="@+id/tv_group_create_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="13dp"
            android:textStyle="bold"
            android:text="管理权转让"
            android:textColor="#354052"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_group_create_title_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="13dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="确认"
            android:textColor="#354052"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cm_divider_bg" />

</LinearLayout>