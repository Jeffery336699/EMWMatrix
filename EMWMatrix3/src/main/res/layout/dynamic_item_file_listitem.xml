<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <com.brucetoo.imagebrowse.widget.PhotoView
        android:id="@+id/iv_dynamicfile_icon"
        android:layout_width="30dp"
        android:layout_height="30dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/iv_dynamicfile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:singleLine="true"
            android:text="@string/unkonw"
            android:textColor="@color/dynamicfile_name_text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/iv_dynamicfile_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unkonw"
            android:textColor="@color/dynamicfile_size_text"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>