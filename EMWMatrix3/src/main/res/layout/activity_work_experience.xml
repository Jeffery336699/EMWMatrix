<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="cc.emw.mobile.me.WorkExperienceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/head_bg">

            <TextView
                android:id="@+id/tv_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="12dp"
                android:text="取消"
                android:textColor="#FF989898"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="12dp"
                android:text="保存"
                android:textColor="#FFEA5404"
                android:textSize="14sp" />

        </RelativeLayout>

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/up_down_shape" />

        <cc.emw.mobile.view.SwipeBackScrollView
            android:id="@+id/swipe_scroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cm_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="12dp"
                        android:text="公司名称"
                        android:textColor="#FF101010"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/et_company_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="right"
                        android:hint="请输入公司名"
                        android:paddingRight="36dp"
                        android:text=""
                        android:textColor="#8A000000"
                        android:textColorHint="#8A000000"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="12dp"
                        android:text="职位"
                        android:textColor="#FF101010"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/et_job"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="right"
                        android:hint="请输入职位"
                        android:paddingRight="36dp"
                        android:text=""
                        android:textColor="#8A000000"
                        android:textColorHint="#8A000000"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_company_address"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="12dp"
                            android:text="市/县"
                            android:textColor="#FF101010"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_company_address"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text=""
                            android:textColor="#8A000000"
                            android:textSize="14sp" />

                        <cc.emw.mobile.view.IconTextView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="16dp"
                            android:gravity="center"
                            android:textColor="#FFCBCBCB"
                            android:textSize="12dp"
                            app:iconCode="eb69" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_start_time"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="12dp"
                            android:text="起始时间"
                            android:textColor="#FF101010"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_start_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text=""
                            android:textColor="#8A000000"
                            android:textSize="14sp" />

                        <cc.emw.mobile.view.IconTextView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="16dp"
                            android:gravity="center"
                            android:textColor="#FFCBCBCB"
                            android:textSize="12dp"
                            app:iconCode="eb69" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_end_time"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="12dp"
                            android:text="结束时间"
                            android:textColor="#FF101010"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_end_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text=""
                            android:textColor="#8A000000"
                            android:textSize="14sp" />

                        <cc.emw.mobile.view.IconTextView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="16dp"
                            android:gravity="center"
                            android:textColor="#FFCBCBCB"
                            android:textSize="12dp"
                            app:iconCode="eb69" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="12dp"
                        android:text="说明"
                        android:textColor="#FF101010"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/et_declare"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/rectangle"
                        android:gravity="left|top"
                        android:hint="请输入详细说明"
                        android:minHeight="60dp"
                        android:paddingLeft="16dp"
                        android:paddingTop="8dp"
                        android:textColor="#8A000000"
                        android:textColorHint="#61000000"
                        android:textSize="14sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/cm_divider_bg" />

            </LinearLayout>

        </cc.emw.mobile.view.SwipeBackScrollView>

        <LinearLayout
            android:id="@+id/ll_del_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/up_down_shape2" />

            <TextView
                android:id="@+id/tv_del_experience"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center"
                android:text="删除该条记录"
                android:textColor="#FFEA5404"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
