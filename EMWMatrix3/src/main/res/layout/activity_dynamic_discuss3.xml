            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/cm_divider_bg"/>
        <cc.emw.mobile.view.PagerSlidingTabStrip
            xmlns:slidtab="http://schemas.android.com/apk/res-auto"
            android:id="@+id/tabstrip_dynamic_discuss"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/form_top_meun_white_bg"
            slidtab:indicatorColor="#FF7E00"
            slidtab:indicatorHeight="3dp"
            slidtab:underlineColor="#DADDE0"
            slidtab:underlineHeight="0.5dp"
            android:visibility="gone"/>
        <!--<android.support.v4.view.ViewPager-->
        <cc.emw.mobile.view.ExViewPager
            android:id="@+id/viewpager_dynamic_discuss"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
