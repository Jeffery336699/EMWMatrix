<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:orientation="horizontal"
    android:gravity="center">
    <View
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="#4FA5E2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="16dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_dynamicschedule_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:gravity="center"
                android:textColor="@color/dynamic_title_text"
                android:textSize="14sp"
                android:text="日程" />
            <TextView
                android:id="@+id/tv_dynamicschedule_sure_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_dynamicschedule_time"
                android:layout_marginLeft="8dp"
                android:layout_alignBottom="@id/tv_dynamicschedule_time"
                android:text="2018-01-01 00:00"
                android:textColor="#9A9A9A"
                android:textSize="12sp"/>

        </RelativeLayout>
        <!--
        <TextView
            android:id="@+id/tv_dynamicschedule_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:gravity="center"
            android:textColor="@color/dynamic_title_text"
            android:textSize="14sp"
            android:text="日程" />
         -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#DBDBDB"/>

        <TextView
            android:id="@+id/tv_dynamicschedule_starttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:text="2015-12-25"
            android:textColor="#757575"
            android:textSize="14sp" />
            <!-- android:textColor="@color/dynamicschedule_date_text"
            android:drawableLeft="@drawable/home_schedule_img_start"
             android:drawablePadding="10dp"-->
        <cc.emw.mobile.view.DynamicTextView
            android:id="@+id/tv_dynamicschedule_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp" />
            <!-- android:src="@drawable/home_schedule_img_line" -->
        <TextView
            android:id="@+id/tv_dynamicschedule_endtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawablePadding="10dp"
            android:text="2015-12-26"
            android:textColor="@color/dynamicschedule_date_text"
            android:textSize="14sp"
            android:visibility="gone"/>
            <!-- android:drawableLeft="@drawable/home_schedule_img_end" -->
    </LinearLayout>
</LinearLayout>