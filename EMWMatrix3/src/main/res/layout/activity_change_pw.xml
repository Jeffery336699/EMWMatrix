<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/head_bg">

            <TextView
                android:id="@+id/cm_header_btn_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="?android:attr/selectableItemBackground"
                android:padding="12dp"
                android:text="取消"
                android:textColor="#FFFF5900"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/cm_header_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="修改密码"
                android:textColor="#DE000000"
                android:textSize="19sp" />

                <!--android:textColor="#7F989898"-->
            <TextView
                android:id="@+id/cm_header_tv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="?android:attr/selectableItemBackground"
                android:padding="12dp"
                android:text="完成"
                android:textColor="#FF5900"
                android:textSize="14sp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请输入新密码"
                android:textColor="#DE000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_change_one"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="25dp"
                android:background="@color/transparent"
                android:hint="请输入6-16位字母、数字或符号"
                android:inputType="textPassword"
                android:textColor="@color/cm_text"
                android:textColorHint="#FF9298A4"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="12dp"
            android:background="@color/cm_divider_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请重新输入新密码"
                android:textColor="#DE000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_change_two"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="25dp"
                android:background="@color/transparent"
                android:hint="请重新输入新密码"
                android:inputType="textPassword"
                android:textColor="@color/cm_text"
                android:textColorHint="#FF9298A4"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="12dp"
            android:background="@color/cm_divider_bg" />

    </LinearLayout>

</LinearLayout>