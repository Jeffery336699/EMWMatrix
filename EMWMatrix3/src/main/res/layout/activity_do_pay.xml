<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/cm_setting_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/head_bg">

            <ImageView
                android:id="@+id/cm_header_btn_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="?android:attr/selectableItemBackground"
                android:padding="15dp"
                android:src="@drawable/setting_back" />

            <TextView
                android:id="@+id/cm_header_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="设置"
                android:textColor="#DE000000"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/cm_header_tv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:text="保存"
                android:textColor="@color/cm_text"
                android:textSize="16sp"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/cm_header_btn_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/cm_ic_notice"
                android:visibility="gone" />

        </RelativeLayout>

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/up_down_shape" />

    </LinearLayout>
    <View
        android:background="#EDEEEF"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:id="@+id/rl_chat_do_paytype"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_chat_do_paytype"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:textColor="#202020"
            android:textSize="15sp"
            android:text="AA制"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_chat_pay_do_type_des"
            android:text="  元/人"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:textColor="#101010"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_chat_do_pay_money"
            android:layout_toLeftOf="@+id/tv_chat_pay_do_type_des"
            android:text="0.0"
            android:layout_centerVertical="true"
            android:textColor="#101010"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="#EDEEEF"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <RelativeLayout
        android:id="@+id/rl_chat_do_pay_type_wei"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_chat_do_pay_type_wei"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/awei_pay_log"/>
        <TextView
            android:layout_toRightOf="@+id/iv_chat_do_pay_type_wei"
            android:layout_marginLeft="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#202020"
            android:text="微信"
            android:layout_centerVertical="true" />
        <ImageView
            android:id="@+id/iv_chat_do_pay_type_wei_select"
            android:src="@drawable/icon_chat_do_pay_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_chat_do_pay_type_ali"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_chat_do_pay_type_ali"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/aali_pay_log"/>
        <TextView
            android:layout_toRightOf="@+id/iv_chat_do_pay_type_ali"
            android:layout_marginLeft="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#202020"
            android:text="微支付"
            android:layout_centerVertical="true" />
        <ImageView
            android:id="@+id/iv_chat_do_pay_type_ali_select"
            android:visibility="gone"
            android:src="@drawable/icon_chat_do_pay_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_chat_do_pay_type_yl"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/aali_pay_log"/>
        <TextView
            android:layout_toRightOf="@+id/iv_chat_do_pay_type_yl"
            android:layout_marginLeft="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#202020"
            android:text="银联"
            android:layout_centerVertical="true" />
        <ImageView
            android:visibility="gone"
            android:src="@drawable/icon_chat_do_pay_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_do_pay_submit"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_chat_do_pay_button"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="54dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:text="跳转到扫一扫"/>
        <ProgressBar
            android:visibility="gone"
            android:id="@+id/pb"
            android:layout_centerInParent="true"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </RelativeLayout>
</LinearLayout>