<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/ic_spitview_horizontal" />

    <LinearLayout
        android:id="@+id/gv_apps"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/im_iv_record_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/im_tv_record"
                android:background="@drawable/time_f"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/im_tv_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:clickable="false"
                android:gravity="center"
                android:text="按住说话"
                android:textColor="#3cc56d"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/im_iv_record_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/im_tv_record"
                android:background="@drawable/time_f"
                android:visibility="invisible" />

        </RelativeLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="20dp">

            <cc.emw.mobile.chat.view.RippleView
                android:id="@+id/im_iv_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <cc.emw.mobile.view.IconTextView
                android:layout_width="40dp"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="40dp"
                app:iconCode="e9a1" />

        </FrameLayout>


    </LinearLayout>


</RelativeLayout>