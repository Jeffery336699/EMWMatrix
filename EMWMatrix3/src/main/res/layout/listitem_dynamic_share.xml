<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@null"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

		<cc.emw.mobile.view.CircleImageView
			android:id="@+id/iv_dynamicshare_head"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:src="@drawable/cm_img_head"
			app:border_color="@color/cm_headimg_border"
			app:border_width="0dp" />
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:orientation="vertical">
		<TextView
			android:id="@+id/tv_dynamicshare_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="..."
			android:textColor="#85B2F6"
			android:textSize="14sp" />
		<TextView
			android:id="@+id/tv_dynamicshare_time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="4dp"
			android:text="已关注"
			android:textColor="#9FA9BA"
			android:textSize="12sp" />
		<TextView
			android:id="@+id/tv_dynamicshare_content"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:text="关注"
			android:textColor="#585D68"
			android:textSize="14sp"/>
		</LinearLayout>
</LinearLayout>