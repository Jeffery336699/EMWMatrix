<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/rc_voip_call_minimize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="16dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:src="@drawable/rc_voip_audio_minimize" />

    <TextView
        android:id="@+id/rc_voip_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/rc_voip_call_minimize"
        android:layout_centerHorizontal="true"
        style="@style/rc_voip_text_style_style"
        android:textSize="18sp"

        android:visibility="gone"/>

    <!--<TextView
        android:id="@+id/rc_voip_call_remind_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rc_voip_user_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        style="@style/rc_voip_text_style_style"
        android:text="@string/rc_voip_call_waiting" />-->

    <ImageView
        android:id="@+id/rc_voip_call_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        android:paddingRight="16dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/rc_voip_icon_audio_add"
        android:onClick="onAddButtonClick"/>

    <ImageView
        android:id="@+id/rc_voip_switch_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:layout_toLeftOf="@+id/rc_voip_call_add"
        android:src="@drawable/rc_voip_switch_camera"
        android:onClick="onSwitchCameraClick"

        android:visibility="gone"/>
</RelativeLayout>