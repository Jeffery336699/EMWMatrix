<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFFFF"
    android:layout_marginTop="7dp"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/checkbox_poi"
        style="@style/CustomCheckboxTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:clickable="false"
        android:focusable="false" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="1dp"
        app:cardMaxElevation="1dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_poi_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="18dp"
                    android:maxLines="1"
                    android:text="KFC"
                    android:textColor="#242424"
                    android:textSize="18sp"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tv_poi_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="餐饮-地点-KFC"
                    android:textColor="#545454"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:ellipsize="end"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_poi_dress"
                        android:layout_centerVertical="true"
                        android:layout_width="14dp"
                        android:layout_height="26dp"
                        android:src="@drawable/map_location"/>
                <TextView
                    android:layout_marginLeft="3dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_poi_dress"
                    android:id="@+id/tv_poi_dress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:text="地点"
                    android:textColor="#545454"
                    android:textSize="12sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_poi_tel"
                        android:layout_centerVertical="true"
                        android:layout_width="14dp"
                        android:layout_height="13dp"
                        android:src="@drawable/icon_chat_poi_tel"/>
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_poi_tel"
                    android:id="@+id/tv_poi_tel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="13938438"
                    android:textColor="#545454"
                    android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_poi_image"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/friends_sends_pictures_no" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>