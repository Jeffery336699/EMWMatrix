<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/ll_dynamic_date"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingLeft="16dp"
	android:paddingTop="1dp"
	android:orientation="horizontal"
	android:background="@color/white">
	<LinearLayout
		android:layout_width="24dp"
		android:layout_height="match_parent"
		android:gravity="center"
		android:orientation="vertical">
		<ImageView
			android:layout_width="16dp"
			android:layout_height="16dp"
			android:src="@drawable/dynamic_circletime" />
		<View
			android:layout_width="1dp"
			android:layout_height="match_parent"
			android:background="#DBDBDB" />
	</LinearLayout>
	<TextView
		android:id="@+id/tv_dynamic_groupdate"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:text=""
		android:textColor="#7F8FA4"
		android:textSize="12sp" />
	<TextView
		android:id="@+id/tv_dynamic_type"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="0dp"
		android:layout_marginRight="16dp"
		android:drawableLeft="@drawable/cm_ic_dynamic_type"
		android:drawablePadding="5dp"
		android:textColor="#9A9A9A"
		android:textSize="14sp"
		android:text="筛选"
		android:visibility="invisible"/>
	<!--android:text="显示全部"-->
</LinearLayout>