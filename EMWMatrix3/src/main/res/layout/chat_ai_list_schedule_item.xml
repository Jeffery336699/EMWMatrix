<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="#ffffff"
              android:orientation="vertical">
    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_chat_ai_schedule_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="21dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="#989898"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/tv_chat_ai_schedule_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="21dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tv_chat_ai_schedule_time"
            android:text=""
            android:textColor="#101010"
            android:textSize="14sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_chat_ai_schedule_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="21dp"
            android:text=""
            android:textColor="#989898"
            android:textSize="12sp"/>
        <cc.emw.mobile.view.CircleImageView
            android:layout_toRightOf="@+id/tv_chat_ai_schedule_start_time"
            android:id="@+id/civ_ai_chat_schedule_header"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="47dp"
            android:layout_centerVertical="true"
            app:border_color="@color/cm_headimg_border"
            app:border_width="2dp"/>
        </RelativeLayout>
    <View
        android:id="@+id/view_chat_ai_list_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#D6D7DC"/>
</LinearLayout>