<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="3dp">
    <!-- 默认隐藏标题 -->
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:textColor="@color/invite_title_color"
        android:textSize="14sp"
        android:text="加入申请"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/content_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">
        <cc.emw.mobile.view.CircleImageView
            android:id="@+id/portrait"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="6dp"
            android:src="@drawable/cm_img_head" />
        <TextView
            android:id="@+id/name"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/cm_text"
            android:textSize="14sp"
            android:text="姓名姓名"/>
        <TextView
            android:id="@+id/process_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:textColor="@color/cm_texthint"
            android:textSize="14sp"
            android:text="申请加入"/>
        <TextView
            android:id="@+id/group_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/dynamicreply_name_text"
            android:textSize="14sp"
            android:text="GroupName"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp">
            <TextView
                android:id="@+id/agree_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/cm_texthint"
                android:textSize="14sp"
                android:text="已同意"/>
            <LinearLayout
                android:id="@+id/apply_for_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/agree_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/stroke_blue"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="同意"
                    android:textColor="#8EB270"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/disagree_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:text="拒绝" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>