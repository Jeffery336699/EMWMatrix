<?xml version="1.0" encoding="utf-8"?>
<!--正常聊天界面的机器人聊天界面-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
    <TextView
        android:id="@+id/tv_msg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:background="@drawable/chat_time"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="11sp"/>
    <RelativeLayout
        android:layout_below="@+id/tv_msg_time"
        android:id="@+id/rl_ai_msg_text_rece_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_ai_chat_ai_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="@drawable/chat_ai_head"
            android:gravity="center"
            android:text="EMW"
            android:textColor="#ffffff"
            android:textSize="10sp"/>
        <TextView
            android:id="@+id/tv_ai_chat_msg_content_rece"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_ai_chat_ai_head"
            android:autoLink="all"
            android:background="@drawable/chat_message_other_bg"
            android:gravity="center_vertical"
            android:maxWidth="220dp"
            android:minWidth="40dp"
            android:padding="10dp"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="15sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_image_list_root"
        android:layout_below="@+id/rl_ai_msg_text_rece_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/chat_ai_item_bg">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/chat_ai_lv_message"
            android:layout_width="match_parent"
            android:layout_height="232dp"
            android:cacheColorHint="@android:color/transparent"
            android:scrollbars="none"/>
    </RelativeLayout>
</RelativeLayout>