<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/root"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <LinearLayout
        android:id="@+id/cm_header_bar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="12dp">

        <cc.emw.mobile.view.IconTextView
            android:id="@+id/cm_header_btn_left9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_back_bg"
            android:gravity="center"
            android:textColor="#7f8fa4"
            android:textSize="14dp"
            custom:iconCode="ea64"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"/>

        <ImageButton
            android:id="@+id/cm_header_btn_more"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/nav_btn_edit"
            android:visibility="gone"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dialog_margin"
        android:layout_marginLeft="@dimen/dialog_margin"
        android:layout_marginRight="@dimen/dialog_margin"
        android:layout_marginTop="@dimen/dialog_margin_headtop"
        android:background="@drawable/activity_dialog_bg"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/dialog_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <include layout="@layout/cm_header_bar"
                     android:visibility="gone"/>
            <LinearLayout
                android:id="@+id/task_create_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/cm_border_bg"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:paddingBottom="13dp"
                android:paddingLeft="16dp"
                android:paddingTop="13dp"
                android:visibility="gone">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/new_task_icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="新建任务"
                    android:textColor="#5FC26D"
                    android:textSize="16sp"/>
            </LinearLayout>
            <in.srain.cube.views.ptr.PtrClassicFrameLayout
                android:id="@+id/load_more_list_view_ptr_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ScrollView
                        android:id="@+id/scrollview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/project_task_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="10dp"
                                android:textColor="#9B9B9B"
                                android:textSize="14sp"/>
                            <ListView
                                android:id="@+id/project_task_lv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/cm_border_bg"
                                android:divider="@null"
                                android:listSelector="@android:color/transparent"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/cm_border_bg"
                                android:orientation="vertical"
                                android:paddingBottom="20dp"
                                android:paddingLeft="12dp"
                                android:paddingRight="12dp"
                                android:paddingTop="10dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal">
                                    <cc.emw.mobile.view.IconTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/team"
                                        android:textColor="#8d8e97"
                                        android:textSize="16dp"
                                        custom:iconCode="ecd0"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="14dp"
                                        android:layout_weight="1"
                                        android:text="团队成员"
                                        android:textColor="#263238"
                                        android:textSize="14sp"/>
                                    <LinearLayout
                                        android:id="@+id/member_more_btn"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:visibility="invisible">
                                        <TextView
                                            android:id="@+id/member_num_tv"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="right"
                                            android:paddingBottom="5dp"
                                            android:paddingLeft="6dp"
                                            android:paddingRight="6dp"
                                            android:paddingTop="3dp"
                                            android:textColor="#7F8FA4"
                                            android:textSize="14sp"/>
                                        <cc.emw.mobile.view.IconTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:background="@color/white"
                                            android:gravity="center"
                                            android:textColor="#cbcbcb"
                                            android:textSize="14dp"
                                            custom:iconCode="eb69"/>
                                    </LinearLayout>
                                </LinearLayout>
                                <cc.emw.mobile.view.MyGridView
                                    android:id="@+id/team_member_gv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:background="@color/white"
                                    android:columnWidth="50dp"
                                    android:gravity="center"
                                    android:listSelector="@android:color/transparent"
                                    android:numColumns="5"
                                    android:stretchMode="columnWidth"
                                    android:verticalSpacing="20dp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </ScrollView>
                    <include layout="@layout/network_tips"/>
                </FrameLayout>
            </in.srain.cube.views.ptr.PtrClassicFrameLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#cccccc"/>
            <LinearLayout
                android:id="@+id/chat_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_listview"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingTop="15dp">
                <cc.emw.mobile.view.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:textColor="#5FC26D"
                    android:textSize="20dp"
                    custom:iconCode="ea34"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发起沟通"
                    android:textColor="#5FC26D"
                    android:textSize="16dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>