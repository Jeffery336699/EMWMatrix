<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:orientation="vertical">

    <LinearLayout
        android:id="@+id/un_login_null"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.0"
        android:background="#000000"
        android:orientation="vertical">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_margin="48dp"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_title_asr"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!--<TextView
                android:id="@+id/tv_dialog_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="14sp"/>-->
            <!--文本输入框-->
            <cc.emw.mobile.chat.view.EmoticonsEditText
                android:id="@+id/tv_dialog_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:gravity="center_vertical"
                android:hint="请开始语音"
                android:lineSpacingExtra="0dp"
                android:maxLines="8"
                android:inputType="textMultiLine"
                android:minHeight="34dp"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="#D1D1D1"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel_btn"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/dialog_left_btn_select"
                android:text="@string/cancel"
                android:textColor="@color/white"/>

            <View
                android:id="@+id/v_line"
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="#D1D1D1"/>

            <Button
                android:id="@+id/confirm_btn"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/dialog_right_btn_select"
                android:text="说完了"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>