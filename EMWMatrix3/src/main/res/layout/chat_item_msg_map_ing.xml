<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_msg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/chat_time"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="11sp" />

    <RelativeLayout
        android:id="@+id/rl_location_receive"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">


            <ImageView
                android:id="@+id/iv_map_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_location_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/white"
                android:padding="5dp"
                android:singleLine="true"
                android:text="fsdfaf"
                android:textSize="13sp" />

        </android.support.v7.widget.CardView>

        <cc.emw.mobile.view.CircleImageView
            android:id="@+id/civ_chat_msg_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="5dp"
            android:elevation="10dp"
            android:src="@drawable/cm_img_head"
            android:visibility="visible"
            app:border_color="@color/white"
            app:border_width="2dp" />

        <LinearLayout
            android:id="@+id/ll_share_pos_timing"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ll_share_pos_bg"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="6dp"
                android:text="共享时限：60分钟"
                android:textColor="#FF101010"
                android:textSize="10sp" />


            <cc.emw.mobile.view.SectorProgressView
                android:id="@+id/spv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="10dp"
                app:bgColor="#89DE90"
                app:fgColor="#FFFFFF"
                app:percent="0"
                app:startAngle="0" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_location_send"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_msg2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <ImageView
                android:id="@+id/iv_map_image2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_location_info2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/white"
                android:padding="5dp"
                android:singleLine="true"
                android:text="asdfasfa"
                android:textSize="13sp" />

            <cc.emw.mobile.view.IconTextView
                android:id="@+id/itv_chat_msg_state_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:textColor="#DE5246"
                android:textSize="12sp"
                app:iconCode="e9d8" />
            <!--<RelativeLayout-->
            <!--android:id="@+id/rl_chat_time_msg2"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginRight="10dp">-->

            <!--<include layout="@layout/chat_item_msg_time_link" />-->

            <!--</RelativeLayout>-->

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/ll_share_pos_timing2"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ll_share_pos_bg"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="6dp"
                android:text="共享时限：60分钟"
                android:textColor="#FF101010"
                android:textSize="10sp" />


            <cc.emw.mobile.view.SectorProgressView
                android:id="@+id/spv2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="10dp"
                app:bgColor="#89DE90"
                app:fgColor="#FFFFFF"
                app:percent="0"
                app:startAngle="0" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_chat_time_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/rl_location_send"
        android:layout_below="@id/rl_location_send"
        android:layout_marginRight="10dp"
        android:visibility="gone">

        <include layout="@layout/chat_item_msg_time_link" />

    </RelativeLayout>

</RelativeLayout>
