<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <cc.emw.mobile.view.IconTextView
        android:id="@+id/itv_chat_dynamic_close"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#000000"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="24sp"
        app:iconCode="ea64" />

    <cc.emw.mobile.view.SwipeBackScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@drawable/form_top_meun_white_bg"
        android:clickable="true"
        android:paddingTop="8dp"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <!--约会主题-->
            <TextView
                android:id="@+id/tv_chat_dynamic_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/cm_text"
                android:textSize="16sp"
                android:textStyle="bold" />
            <!--约会详情-->
            <TextView
                android:id="@+id/tv_chat_dynamic_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="top"
                android:lines="3"
                android:textColor="@color/cm_text"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/cm_divider_bg" />

            <com.gc.materialdesign.views.LayoutRipple2
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <cc.emw.mobile.view.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#8d8e97"
                    android:textSize="16sp"
                    app:iconCode="ea45" />

                <TextView
                    android:id="@+id/tv_chat_dynamic_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="约会地点"
                    android:textColor="@color/cm_text"
                    android:textColorHint="@color/cm_texthint"
                    android:textSize="14sp" />
            </com.gc.materialdesign.views.LayoutRipple2>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="41dp"
                android:background="@color/cm_divider_bg" />

            <com.gc.materialdesign.views.LayoutRipple2
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <cc.emw.mobile.view.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#8d8e97"
                    android:textSize="16sp"
                    app:iconCode="e912" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="负责人"
                    android:textColor="@color/cm_text"
                    android:textColorHint="@color/cm_texthint"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_chat_dynamic_mainuser"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:gravity="right|center"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </com.gc.materialdesign.views.LayoutRipple2>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="41dp"
                android:background="@color/cm_divider_bg" />

            <com.gc.materialdesign.views.LayoutRipple2
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <cc.emw.mobile.view.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#8d8e97"
                    android:textSize="16sp"
                    app:iconCode="e9ac" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="参与人"
                    android:textColor="@color/cm_text"
                    android:textColorHint="@color/cm_texthint"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_chat_dynamic_calluser"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:ellipsize="end"
                    android:gravity="right|center"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </com.gc.materialdesign.views.LayoutRipple2>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="41dp"
                android:background="@color/cm_divider_bg" />

            <com.gc.materialdesign.views.LayoutRipple2
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <cc.emw.mobile.view.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#8d8e97"
                    android:textSize="16sp"
                    app:iconCode="e92c" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="开始时间"
                    android:textColor="@color/cm_text"
                    android:textColorHint="@color/cm_texthint"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_chat_dynamic_startdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/cm_select_text"
                    android:textColorHint="@color/cm_texthint"
                    android:textSize="14sp" />
            </com.gc.materialdesign.views.LayoutRipple2>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="41dp"
                android:background="@color/cm_divider_bg" />

            <com.gc.materialdesign.views.LayoutRipple2
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <cc.emw.mobile.view.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#8d8e97"
                    android:textSize="16sp"
                    app:iconCode="e92c" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="结束时间"
                    android:textColor="@color/cm_text"
                    android:textColorHint="@color/cm_texthint"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_chat_dynamic_enddate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center"
                    android:text=""
                    android:textColor="@color/cm_select_text"
                    android:textColorHint="@color/cm_texthint"
                    android:textSize="14sp" />
            </com.gc.materialdesign.views.LayoutRipple2>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/cm_divider_bg" />

            <com.gc.materialdesign.views.LayoutRipple2
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <cc.emw.mobile.view.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#8d8e97"
                    android:textSize="16sp"
                    app:iconCode="ea45" />

                <TextView
                    android:id="@+id/et_chat_dynamic_pay_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:gravity="left"
                    android:hint="支付类型"
                    android:maxLines="1"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/cm_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/rg_select_pay_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="" />
            </com.gc.materialdesign.views.LayoutRipple2>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/cm_divider_bg" />
            <com.gc.materialdesign.views.LayoutRipple2
                android:visibility="gone"
                android:id="@+id/ll_chat_dynamic_pay_number"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <cc.emw.mobile.view.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#8d8e97"
                    android:textSize="16sp"
                    app:iconCode="ea45" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:gravity="left"
                    android:hint="金额/人"
                    android:maxLines="1"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/cm_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/et_chat_dynamic_pay_money"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="0.0"
                    android:lines="1"
                    android:textColor="@color/cm_text"
                    android:textColorHint="@color/cm_texthint"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  元/人" />
            </com.gc.materialdesign.views.LayoutRipple2>
        </LinearLayout>
    </cc.emw.mobile.view.SwipeBackScrollView>
</LinearLayout>