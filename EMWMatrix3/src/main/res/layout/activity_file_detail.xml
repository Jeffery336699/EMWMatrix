<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="horizontal"
	android:background="@color/transparent">
<View
	android:layout_width="1dp"
	android:layout_height="match_parent"
	android:layout_marginLeft="@dimen/activity_margin_left"
	android:background="@color/activity_divider_bg" />
<LinearLayout
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="@color/cm_bg">

    <include layout="@layout/cm_header_bar" />
	<ProgressBar
		android:id="@+id/pb_filedetail_download"
		style="?android:attr/progressBarStyleHorizontal"
		android:layout_width="match_parent"
		android:layout_height="4dp"
		android:progressDrawable="@drawable/filedetail_barcolor"
		android:progress="0"
		android:max="100"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:paddingTop="16dp"
				android:paddingBottom="16dp"
				android:paddingLeft="12dp"
				android:paddingRight="12dp"
				android:background="@color/white">
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">
					<ImageView
						android:id="@+id/iv_filedetail_icon"
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:src="@drawable/ico_word"/>
					<TextView
						android:id="@+id/tv_filedetail_name"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="10dp"
						android:textColor="#595968"
						android:textSize="16sp"
						android:text="@string/unkonw"/>
					<TextView
						android:id="@+id/tv_filedetail_desc"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="10dp"
						android:textColor="#595968"
						android:textSize="14sp"
						android:text="@string/unkonw"
						android:visibility="gone"/>
				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:gravity="center_vertical"
					android:layout_marginTop="16dp">
					<cc.emw.mobile.view.IconTextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/circle_border_bg"
						android:gravity="center"
						android:textColor="#8D8E97"
						android:textSize="16dp"
						app:iconCode="e92c" />
					<TextView
						android:id="@+id/tv_filedetail_uploadtime"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="2"
						android:layout_marginLeft="10dp"
						android:textColor="#595968"
						android:textSize="14sp"
						android:text="05/01-05/03"/>
					<cc.emw.mobile.view.IconTextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/circle_border_bg"
						android:gravity="center"
						android:textColor="#8D8E97"
						android:textSize="16dp"
						app:iconCode="eb33" />
					<TextView
						android:id="@+id/tv_filedetail_size"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:layout_marginLeft="10dp"
						android:textColor="#595968"
						android:textSize="14sp"
						android:text="10M"/>
				</LinearLayout>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:orientation="horizontal"
					android:gravity="center_vertical">
					<cc.emw.mobile.view.IconTextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/circle_border_bg"
						android:gravity="center"
						android:textColor="#8D8E97"
						android:textSize="16dp"
						app:iconCode="ea71" />
					<TextView
						android:id="@+id/tv_filedetail_project"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="10dp"
						android:textColor="#595968"
						android:textSize="14sp"
						android:text="EMW for web"/>
				</LinearLayout>
			</LinearLayout>
			<View
				android:layout_width="match_parent"
				android:layout_height="0.5dp"
				android:background="@color/cm_divider_bg" />

			<LinearLayout
				android:id="@+id/ll_filedetail_discuss"
				android:layout_width="match_parent"
				android:layout_height="48dp"
				android:layout_marginTop="10dp"
				android:background="@drawable/cm_border_bg"
				android:orientation="horizontal"
				android:gravity="center"
				android:paddingLeft="12dp"
				android:paddingRight="12dp"
				android:visibility="visible">
				<cc.emw.mobile.view.IconTextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:textColor="#8D8E97"
					android:textSize="16dp"
					app:iconCode="ea3f" />
				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
					android:textColor="#595968"
					android:textSize="16sp"
					android:text="讨论"/>
				<TextView
					android:id="@+id/tv_filedetail_number"
					android:layout_width="24dp"
					android:layout_height="24dp"
					android:layout_gravity="center_vertical"
					android:layout_marginLeft="8dp"
					android:background="@drawable/round_bg"
					android:gravity="center"
					android:text="10"
					android:textColor="@color/white"
					android:textSize="15sp"
					android:visibility="gone" />
				<cc.emw.mobile.view.IconTextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:textColor="#CBCBCB"
					android:textSize="12dp"
					app:iconCode="eb69" />
			</LinearLayout>

			<LinearLayout
				android:id="@+id/ll_filedetail_share"
				android:layout_width="match_parent"
				android:layout_height="48dp"
				android:layout_marginTop="10dp"
				android:background="@drawable/cm_border_bg"
				android:orientation="horizontal"
				android:gravity="center"
				android:paddingLeft="12dp"
				android:paddingRight="12dp">
				<cc.emw.mobile.view.IconTextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:textColor="#8D8E97"
					android:textSize="16dp"
					app:iconCode="eb59" />
				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
					android:textColor="#595968"
					android:textSize="16sp"
					android:text="分享查看"/>
				<cc.emw.mobile.view.IconTextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:textColor="#CBCBCB"
					android:textSize="12dp"
					app:iconCode="eb69" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/ll_filedetail_history"
				android:layout_width="match_parent"
				android:layout_height="48dp"
				android:layout_marginTop="10dp"
				android:background="@drawable/cm_border_bg"
				android:orientation="horizontal"
				android:gravity="center"
				android:paddingLeft="12dp"
				android:paddingRight="12dp">
				<cc.emw.mobile.view.IconTextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:textColor="#8D8E97"
					android:textSize="16dp"
					app:iconCode="e98b" />
				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
					android:textColor="#595968"
					android:textSize="16sp"
					android:text="历史版本"/>
				<cc.emw.mobile.view.IconTextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:textColor="#CBCBCB"
					android:textSize="12dp"
					app:iconCode="eb69" />
			</LinearLayout>

			<cc.emw.mobile.view.ExListView
				android:id="@+id/lv_filedetail_downlog"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:cacheColorHint="@android:color/transparent"
				android:paddingLeft="12dp"
				android:paddingRight="12dp"
				android:divider="@color/transparent"
				android:dividerHeight="0dp"
				android:fadingEdge="none"
				android:listSelector="@android:color/transparent" />
        </LinearLayout>
    </ScrollView>

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/filedetail_divider_bg"/>-->
    <LinearLayout
        android:id="@+id/ll_filedetail_more"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/cm_border_bg"
        android:gravity="center"
        android:visibility="visible" >
		<RelativeLayout
			android:id="@+id/rl_filedetail_open"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:paddingTop="6dp"
			android:paddingBottom="6dp">
			<cc.emw.mobile.view.IconTextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true"
				android:textColor="#4A90E2"
				android:textSize="20dp"
				android:text="预览"
				app:iconCode="ec0a" />
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentBottom="true"
				android:layout_centerHorizontal="true"
				android:textColor="#595968"
				android:textSize="12sp"
				android:text="查看"/>
		</RelativeLayout>
		<RelativeLayout
			android:id="@+id/rl_filedetail_download"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:paddingTop="6dp"
			android:paddingBottom="6dp">
			<cc.emw.mobile.view.IconTextView
				android:id="@+id/itv_filedetail_down"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true"
				android:paddingLeft="2dp"
				android:paddingRight="2dp"
				android:paddingBottom="1dp"
				android:textColor="#4A90E2"
				android:textSize="20dp"
				android:text="下载"
				app:iconCode="eb55" />
			<cc.emw.mobile.view.IconTextView
				android:id="@+id/itv_filedetail_exist"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignBottom="@+id/itv_filedetail_down"
				android:layout_alignRight="@+id/itv_filedetail_down"
				android:layout_marginLeft="20dp"
				android:textColor="#3CC56D"
				android:textSize="12dp"
				app:iconCode="e924" />
			<TextView
				android:id="@+id/tv_filedetail_down"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentBottom="true"
				android:layout_centerHorizontal="true"
				android:textColor="#595968"
				android:textSize="12sp"
				android:text="下载"/>
		</RelativeLayout>
		<RelativeLayout
			android:id="@+id/rl_filedetail_update"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:paddingTop="6dp"
			android:paddingBottom="6dp">
			<cc.emw.mobile.view.IconTextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true"
				android:textColor="#4A90E2"
				android:textSize="20dp"
				android:text="更新"
				app:iconCode="ecaf" />
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentBottom="true"
				android:layout_centerHorizontal="true"
				android:textColor="#595968"
				android:textSize="12sp"
				android:text="更新"/>
		</RelativeLayout>
		<RelativeLayout
			android:id="@+id/rl_filedetail_share"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:paddingTop="6dp"
			android:paddingBottom="6dp">
			<cc.emw.mobile.view.IconTextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true"
				android:textColor="#4A90E2"
				android:textSize="20dp"
				android:text="分享"
				app:iconCode="ecea" />
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentBottom="true"
				android:layout_centerHorizontal="true"
				android:textColor="#595968"
				android:textSize="12sp"
				android:text="分享"/>
		</RelativeLayout>
		<RelativeLayout
			android:id="@+id/rl_filedetail_cancel"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:paddingTop="6dp"
			android:paddingBottom="6dp">
			<cc.emw.mobile.view.IconTextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true"
				android:textColor="#4A90E2"
				android:textSize="20dp"
				android:text="作废"
				app:iconCode="ea69" />
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentBottom="true"
				android:layout_centerHorizontal="true"
				android:textColor="#595968"
				android:textSize="12sp"
				android:text="作废"/>
		</RelativeLayout>
		<RelativeLayout
			android:id="@+id/rl_filedetail_delete"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:paddingTop="6dp"
			android:paddingBottom="6dp">
			<cc.emw.mobile.view.IconTextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true"
				android:textColor="#4A90E2"
				android:textSize="20dp"
				android:text="彻底删除"
				app:iconCode="e92e" />
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentBottom="true"
				android:layout_centerHorizontal="true"
				android:textColor="#595968"
				android:textSize="12sp"
				android:text="彻底删除"/>
		</RelativeLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>