<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <in.srain.cube.views.ptr.PtrClassicFrameLayout
        android:id="@+id/load_more_list_view_ptr_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_contact_search">

        <ListView
            android:id="@+id/load_more_small_image_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@color/cm_divider_bg"
            android:dividerHeight="0.5dip"
            android:fadingEdge="none"
            android:footerDividersEnabled="true"
            android:headerDividersEnabled="false"
            android:listSelector="@android:color/transparent"
            android:padding="0dp"
            android:scrollbarStyle="outsideOverlay" />
    </in.srain.cube.views.ptr.PtrClassicFrameLayout>

    <TextView
        android:id="@+id/contact_tv_letter"
        android:layout_width="40.4dp"
        android:layout_height="40.4dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="#169BFF"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:visibility="gone" />

    <cc.emw.mobile.contact.ContactSideBar
        android:id="@+id/contact_sidebar"
        android:layout_width="25dip"
        android:layout_height="300dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

    <include layout="@layout/contact_search_bar" />

</RelativeLayout>