<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cm_dialog_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="117dp"
        android:background="@color/cm_dialogcontent_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新建文件夹"
            android:textColor="@color/cm_text"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_filecreate_name"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/cm_button_bg"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:hint="文件夹名称"
            android:textColor="@color/cm_text"
            android:textColorHint="@color/cm_texthint"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_filecreate_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:lines="5"
            android:textColor="@color/cm_text"
            android:textColorHint="@color/cm_texthint"
            android:textSize="15sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_filecreate_cancel"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:background="@drawable/cm_button_bg"
                android:text="取消"
                android:textColor="@color/cm_text"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_filecreate_ok"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/cm_button_bg"
                android:text="确定"
                android:textColor="@color/cm_text"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>