<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cm_bg"
    android:orientation="vertical" >

    <include layout="@layout/cm_header_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="18dp"
                android:paddingRight="18dp" >
                <ImageView 
                    android:id="@+id/iv_filedetail_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ico_word"/>
				<TextView
				    android:id="@+id/tv_filedetail_name" 
				    android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:layout_marginLeft="10dp"
                	android:textColor="@color/cm_text"
                	android:textSize="15sp"
                	android:text="@string/unkonw"/>

            </LinearLayout>
			<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp" >
				<TextView 
				    android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:textColor="@color/filedetail_title_text"
                	android:textSize="13sp"
                	android:text="文件大小"/>
				<TextView 
				    android:id="@+id/tv_filedetail_size"
				    android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:layout_marginTop="5dp"
                	android:textColor="@color/cm_text"
                	android:textSize="15sp"
                	android:text="@string/unkonw"/>
            </LinearLayout>
            <View 
                android:layout_width="match_parent"
               	android:layout_height="0.5dp"
               	android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
               	android:background="@color/cm_divider_bg"
               	/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp" >
				<TextView 
				    android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:textColor="@color/filedetail_title_text"
                	android:textSize="13sp"
                	android:text="上传时间"/>
				<TextView 
				    android:id="@+id/tv_filedetail_uploadtime"
				    android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:layout_marginTop="5dp"
                	android:textColor="@color/cm_text"
                	android:textSize="15sp"
                	android:text="@string/unkonw"/>
            </LinearLayout>
            <View 
                android:layout_width="match_parent"
               	android:layout_height="0.5dp"
               	android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
               	android:background="@color/cm_divider_bg"
               	/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp" >
				<TextView 
				    android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:textColor="@color/filedetail_title_text"
                	android:textSize="13sp"
                	android:text="分享范围"/>
				<TextView 
				    android:id="@+id/tv_filedetail_sharescope"
				    android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:layout_marginTop="5dp"
                	android:textColor="@color/cm_text"
                	android:textSize="15sp"
                	android:text="无"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_filedetail_project"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="18dp"
                android:paddingRight="10dp" >
				<ImageView 
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ico_xiangmu"/>
				<TextView 
				    android:layout_width="0dp"
                	android:layout_height="wrap_content"
                	android:layout_weight="1"
                	android:layout_marginLeft="10dp"
                	android:textColor="@color/cm_text"
                	android:textSize="15sp"
                	android:text="工作项目"/>
				<TextView
                    android:id="@+id/tv_filedetail_projectcount"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/round_bg"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:visibility="gone" />
				<ImageView 
				    android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:src="@drawable/list_btn_next"/>
            </LinearLayout>
            <View 
                android:layout_width="match_parent"
               	android:layout_height="0.5dp"
               	android:layout_marginLeft="60dp"
               	android:background="@color/cm_divider_bg"
               	/>
            <LinearLayout
                android:id="@+id/ll_filedetail_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="18dp"
                android:paddingRight="10dp" >
				<ImageView 
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ico_renwu"/>
				<TextView 
				    android:layout_width="0dp"
                	android:layout_height="wrap_content"
                	android:layout_weight="1"
                	android:layout_marginLeft="10dp"
                	android:textColor="@color/cm_text"
                	android:textSize="15sp"
                	android:text="相关任务"/>
				<TextView
                    android:id="@+id/tv_filedetail_taskcount"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/round_bg"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:visibility="gone" />
				<ImageView 
				    android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:src="@drawable/list_btn_next"/>
            </LinearLayout>
            <View 
                android:layout_width="match_parent"
               	android:layout_height="0.5dp"
               	android:layout_marginLeft="60dp"
               	android:background="@color/cm_divider_bg"
               	/>
            <LinearLayout
                android:id="@+id/ll_filedetail_schedul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="18dp"
                android:paddingRight="10dp" >
				<ImageView 
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ico_richeng"/>
				<TextView 
				    android:layout_width="0dp"
                	android:layout_height="wrap_content"
                	android:layout_weight="1"
                	android:layout_marginLeft="10dp"
                	android:textColor="@color/cm_text"
                	android:textSize="15sp"
                	android:text="活动日程"/>
				<TextView
                    android:id="@+id/tv_filedetail_schedulecount"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/round_bg"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:visibility="gone" />
				<ImageView 
				    android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:src="@drawable/list_btn_next"/>
            </LinearLayout>
            
        </LinearLayout>
    </ScrollView>

    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/filedetail_divider_bg"/>
    <LinearLayout
        android:id="@+id/ll_filelist_more"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center"
        android:visibility="visible" >

        <Button
            android:id="@+id/btn_filedetail_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@drawable/ico_shanchu"
            android:textColor="@color/filelist_more_text"
            android:textSize="12sp"
            android:text="删除" />
		<Button
            android:id="@+id/btn_filedetail_move"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@drawable/ico_yidong"
            android:textColor="@color/filelist_more_text"
            android:textSize="12sp"
            android:text="移动"
            android:visibility="gone" />
        <Button
            android:id="@+id/btn_filedetail_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@drawable/ico_fenxiang"
            android:textColor="@color/filelist_more_text"
            android:textSize="12sp"
            android:text="分享" />

        <Button
            android:id="@+id/btn_filedetail_download"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@drawable/ico_xiazai"
            android:textColor="@color/filelist_more_text"
            android:textSize="12sp"
            android:text="下载" />

        <Button
            android:id="@+id/btn_filedetail_open"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@drawable/ico_chakan"
            android:textColor="@color/filelist_more_text"
            android:textSize="12sp"
            android:text="查看" />
    </LinearLayout>
</LinearLayout>