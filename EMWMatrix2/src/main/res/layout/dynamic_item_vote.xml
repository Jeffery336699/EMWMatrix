<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/tv_dynamicvote_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dynamicvote_count_text"
        android:textSize="13sp"
        android:text="投票" />
    <LinearLayout
        android:id="@+id/ll_dynamicvote_voted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    </LinearLayout>
    <RadioGroup
        android:id="@+id/rg_dynamicvote_voting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </RadioGroup>
    <Button 
	    android:id="@+id/btn_dynamicvote_vote"
	    android:layout_width="match_parent"
	    android:layout_height="44dp"
	    android:layout_marginTop="20dp"
	    android:background="@drawable/cm_button_bg"
	    android:textSize="15sp"
	    android:textColor="@color/dynamicvote_vote_text"
	    android:text="投票"
	    android:visibility="gone" />
</LinearLayout>