<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="15dp"
    android:paddingLeft="12dp"
    android:paddingRight="18dp"
    android:paddingTop="10dp" >

    <TextView
        android:id="@+id/tv_work_project_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="my project"
        android:textColor="@color/cm_text"
        android:textSize="13sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_work_project_name"
        android:layout_marginTop="2dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_work_project_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="my descriptions"
            android:textColor="@color/cm_text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_work_project_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="create_time"
            android:textColor="@color/tasksprint_time_text"
            android:textSize="13sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_work_project_select"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ico_danxuan"
         />

</RelativeLayout>