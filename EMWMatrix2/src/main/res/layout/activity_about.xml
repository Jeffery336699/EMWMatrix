<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cm_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <include layout="@layout/cm_header_bar" />

    <ImageView
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/abouticon" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="24dp"
        android:layout_marginTop="10.7dp"
        android:gravity="center_horizontal"
        android:text="EMW Matrix"
        android:textColor="@color/meabout_text"
        android:textSize="17sp" />

    <TextView
        android:layout_width="54dp"
        android:layout_height="17dp"
        android:layout_marginTop="0.3dp"
        android:gravity="center_horizontal"
        android:text="版本：2.0"
        android:textColor="@color/cm_text"
        android:textSize="12sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20.3dp"
        android:gravity="left"
        android:text="EMW Matrix强调移动先行，把工作装进口袋，随时随地保持沟通，高效工作。带给您丰富、强大的移动体验，日程、项目、订单、客户、商机等所有业务一手掌控。"
        android:textColor="@color/cm_text"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_about_suggestion"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="32dp"
        android:background="@color/white"
        android:drawableRight="@drawable/list_btn_next"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:gravity="center_vertical"
        android:text="意见反馈"
        android:textColor="@color/cm_text"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:gravity="center_horizontal|bottom"
        android:text="©2008-2016 EMW Corpation\n中天博日版权所有"
        android:textColor="@color/cm_texthint"
        android:textSize="12sp" />

</LinearLayout>