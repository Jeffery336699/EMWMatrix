<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >
	<cc.emw.mobile.view.CircleImageView
	    android:id="@+id/iv_dynamicdetail_head"
	    android:layout_width="40dp"
	    android:layout_height="40dp"
	    android:src="@drawable/cm_img_head"
	    app:border_color="@color/cm_headimg_border"
	    app:border_width="2dp" />
	<LinearLayout 
	    android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="10dp"
    	android:orientation="vertical">
	    <TextView
	        android:id="@+id/tv_dynamicdetail_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="15dp"
	        android:text="张三 "
	        android:textColor="@color/dynamicreply_name_text"
	        android:textSize="13sp" />
		<TextView
	        android:id="@+id/tv_dynamicdetail_content"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:layout_marginRight="15dp"
	        android:text="好的"
	        android:textColor="@color/cm_text"
	        android:textSize="14sp" />
		<LinearLayout
		    android:id="@+id/ll_dynamicdetail_reply"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:orientation="vertical"
	        android:background="@color/dynamic_other_bg"
	        android:padding="10dp"
	        android:visibility="gone" />
		    
		<LinearLayout 
		    android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="10dp"
	    	android:orientation="horizontal">
		    <TextView
		        android:id="@+id/tv_dynamicdetail_time"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:text="2015-12-25 14:00"
		        android:textColor="@color/cm_texthint"
		        android:textSize="12sp" />
		    <Button
		        android:id="@+id/btn_dynamicdetail_reply"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@null"
		        android:textColor="@color/dynamicreply_reply_text"
		        android:textSize="13sp"
		        android:text="回复" />
	    </LinearLayout>
	    <View 
	    	android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:layout_marginTop="10dp"
	        android:background="@color/cm_divider_bg"/>
	</LinearLayout>
</LinearLayout>