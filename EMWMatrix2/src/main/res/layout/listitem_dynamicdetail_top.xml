<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:background="@android:color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:gravity="center_vertical" >

        <cc.emw.mobile.view.CircleImageView
            android:id="@+id/iv_dynamicdetail_tophead"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/cm_img_head"
            app:border_color="@color/cm_headimg_border"
            app:border_width="2dp" />

        <TextView
            android:id="@+id/tv_dynamicdetail_topname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="..."
            android:textColor="@color/dynamic_name_text"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cm_divider_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_dynamicdetail_topcontent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
        	android:layout_marginLeft="12dp"
        	android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:text="..."
            android:textColor="@color/cm_text"
            android:textSize="14sp" />

        <at.grabner.circleprogress.CircleProgressView
            android:id="@+id/circleView"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            CircleProgressView:cpv_autoTextSize="true"
            CircleProgressView:cpv_barColor="#D94947"
            CircleProgressView:cpv_barWidth="5dp"
            CircleProgressView:cpv_contourColor="#CCCCCC"
            CircleProgressView:cpv_contourSize="0.5dp"
            CircleProgressView:cpv_maxValue="100"
            CircleProgressView:cpv_rimColor="#E5E5E5"
            CircleProgressView:cpv_rimWidth="5dp"
            CircleProgressView:cpv_seekMode="false"
            CircleProgressView:cpv_showUnit="true"
            CircleProgressView:cpv_textColor="#DB5755"
            CircleProgressView:cpv_unit="%"
            CircleProgressView:cpv_unitColor="#666666" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_dynamicdetail_topother"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@color/dynamic_other_bg"
        android:visibility="gone" />

    <cc.emw.mobile.view.FlowLayout
        android:id="@+id/ll_dynamicdetail_topimage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="2dp" />

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="horizontal">
        <TextView
	        android:id="@+id/tv_dynamicdetail_toptime"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:drawableLeft="@null"
	        android:text="..."
	        android:textColor="@color/cm_texthint"
	        android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_dynamic_discuss"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:drawableLeft="@drawable/index_ico_pinglun"
	        android:drawablePadding="5dp"
	        android:gravity="center"
	        android:text="0"
	        android:textColor="@color/cm_texthint"
	        android:textSize="13sp" />
        <TextView
            android:id="@+id/tv_dynamic_collect"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:drawableLeft="@drawable/index_ico_dianzan"
	        android:drawablePadding="5dp"
	        android:gravity="center"
	        android:text="0"
	        android:textColor="@color/cm_texthint"
	        android:textSize="13sp" />
        <TextView
            android:id="@+id/tv_dynamic_share"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:drawableLeft="@drawable/index_ico_zhuanfa"
	        android:drawablePadding="5dp"
	        android:gravity="center"
	        android:text="0"
	        android:textColor="@color/cm_texthint"
	        android:textSize="13sp" />
    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/cm_bg" />

</LinearLayout>
