<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cm_bg"
    android:orientation="vertical"
    tools:context="cc.emw.mobile.contact.ModifyUserInfoActivity">

    <include layout="@layout/cm_header_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="10dp"
            android:text="邮箱"
            android:textColor="@color/cal_text_name"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/cm_input_et_content_mail"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:gravity="center|left"
            android:hint="请输入新的邮箱"
            android:textColor="@color/cal_edit_text"
            android:textColorHint="@color/cal_edit_text_hint"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="10dp"
            android:text="手机"
            android:textColor="@color/cal_text_name"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/cm_input_et_content_phone"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:gravity="center|left"
            android:hint="请输入新的手机号"
            android:textColor="@color/cal_edit_text"
            android:textColorHint="@color/cal_edit_text_hint"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
